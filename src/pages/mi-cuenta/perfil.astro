---
// src/pages/mi-cuenta/perfil.astro
// Página de perfil

import PublicLayout from "@/layouts/PublicLayout.astro";
import Button from "@/components/ui/Button.astro";

const title = "Mi Perfil";
const description = "Edita tu información de perfil";
---

<PublicLayout title={title} description={description}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-sm text-charcoal-600 mb-8">
      <a href="/" class="hover:text-navy-500">Inicio</a>
      <span>/</span>
      <span>Mi Cuenta</span>
      <span>/</span>
      <span>Perfil</span>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar -->
      <aside class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-lg font-serif font-bold text-charcoal-900 mb-6">Mi Cuenta</h2>
          <nav class="space-y-3">
            <a href="/mi-cuenta/perfil" class="block text-red-600 font-medium text-sm border-l-2 border-red-600 pl-3">
              Perfil
            </a>
            <a href="/mi-cuenta/pedidos" class="block text-charcoal-600 hover:text-red-600 transition-colors text-sm">
              Mis Pedidos
            </a>
            <a href="/mi-cuenta/direcciones" class="block text-charcoal-600 hover:text-red-600 transition-colors text-sm">
              Direcciones
            </a>
            <button id="logout-btn" class="block w-full text-left text-charcoal-600 hover:text-red-600 transition-colors text-sm">
              Cerrar Sesión
            </button>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <div class="lg:col-span-3">
        <div class="bg-white rounded-lg shadow-sm p-8">
          <h1 class="text-3xl font-serif font-bold text-charcoal-900 mb-8">
            Mi Perfil
          </h1>

          <!-- Profile Form -->
          <form id="profile-form" class="space-y-6">
            <!-- Full Name -->
            <div>
              <label for="fullname" class="block text-sm font-medium text-charcoal-900 mb-2">
                Nombre Completo
              </label>
              <input
                type="text"
                id="fullname"
                name="fullname"
                class="w-full px-4 py-2 border border-charcoal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
                placeholder="Tu nombre"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-charcoal-900 mb-2">
                Correo Electrónico
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-charcoal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
                placeholder="tu@email.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-charcoal-900 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-2 border border-charcoal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
                placeholder="+34 123 456 789"
              />
            </div>

            <!-- Success Message -->
            <div id="success-message" class="hidden bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg text-sm">
              Perfil actualizado correctamente
            </div>

            <!-- Submit Button -->
            <div class="flex gap-4">
              <button type="submit" class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition-colors">
                Guardar Cambios
              </button>
              <a href="/mi-cuenta/perfil" class="px-6 py-2 bg-charcoal-100 hover:bg-charcoal-200 text-charcoal-900 rounded-lg font-medium transition-colors">
                Cancelar
              </a>
            </div>
          </form>

          <!-- Change Password Section -->
          <div class="mt-12 pt-12 border-t border-charcoal-200">
            <h2 class="text-2xl font-serif font-bold text-charcoal-900 mb-6">
              Cambiar Contraseña
            </h2>

            <form id="password-form" class="space-y-6 max-w-md">
              <!-- Current Password -->
              <div>
                <label for="current-password" class="block text-sm font-medium text-charcoal-900 mb-2">
                  Contraseña Actual
                </label>
                <input
                  type="password"
                  id="current-password"
                  name="current-password"
                  class="w-full px-4 py-2 border border-charcoal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
                />
              </div>

              <!-- New Password -->
              <div>
                <label for="new-password" class="block text-sm font-medium text-charcoal-900 mb-2">
                  Nueva Contraseña
                </label>
                <input
                  type="password"
                  id="new-password"
                  name="new-password"
                  class="w-full px-4 py-2 border border-charcoal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
                />
              </div>

              <!-- Confirm New Password -->
              <div>
                <label for="confirm-new-password" class="block text-sm font-medium text-charcoal-900 mb-2">
                  Confirmar Contraseña
                </label>
                <input
                  type="password"
                  id="confirm-new-password"
                  name="confirm-new-password"
                  class="w-full px-4 py-2 border border-charcoal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
                />
              </div>

              <!-- Error Message -->
              <div id="password-error" class="hidden bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm"></div>

              <!-- Submit Button -->
              <button type="submit" class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition-colors">
                Cambiar Contraseña
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { clearCartOnLogout } from '@/stores/cart';

    // Profile form
    document.getElementById('profile-form')?.addEventListener('submit', (e) => {
      e.preventDefault();
      const successEl = document.getElementById('success-message');
      if (successEl) {
        successEl.classList.remove('hidden');
        setTimeout(() => {
          successEl.classList.add('hidden');
        }, 3000);
      }
    });

    // Password form
    document.getElementById('password-form')?.addEventListener('submit', (e) => {
      e.preventDefault();
      const errorEl = document.getElementById('password-error');
      const newPassword = (document.getElementById('new-password') as HTMLInputElement).value;
      const confirmPassword = (document.getElementById('confirm-new-password') as HTMLInputElement).value;

      if (newPassword !== confirmPassword) {
        if (errorEl) {
          errorEl.textContent = 'Las contraseñas no coinciden';
          errorEl.classList.remove('hidden');
        }
        return;
      }

      if (errorEl) {
        errorEl.textContent = 'Contraseña actualizada correctamente';
        errorEl.classList.add('bg-green-50', 'border-green-200', 'text-green-700');
        errorEl.classList.remove('hidden', 'bg-red-50', 'border-red-200', 'text-red-700');
      }
    });

    // Logout
    document.getElementById('logout-btn')?.addEventListener('click', async () => {
      await clearCartOnLogout();
      window.location.href = '/';
    });
  </script>
</PublicLayout>
