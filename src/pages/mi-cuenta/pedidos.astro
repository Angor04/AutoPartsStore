// src/pages/mi-cuenta/pedidos.astro
// P√°gina de historial de pedidos - VERSI√ìN PRODUCCI√ìN
// Muestra pedidos con estados, acciones seg√∫n estado, badges visuales

import PublicLayout from "@/layouts/PublicLayout.astro";
import { getSupabaseAdmin } from "@/lib/supabase";
import AccountSidebar from "@/components/ui/AccountSidebar.astro";

const title = "Mis Pedidos";
const description = "Ver el historial de tus pedidos";

// Obtener usuario de cookies
const userId = Astro.cookies.get('user-id')?.value;

if (!userId) {
  console.log('üö´ No userId found in cookies for /mi-cuenta/pedidos');
  return Astro.redirect('/auth/login?redirect=/mi-cuenta/pedidos');
}

console.log('üîç Fetching orders for userId:', userId);

// Cargar pedidos del usuario
const supabaseAdmin = getSupabaseAdmin();

// Obtener email del usuario para b√∫squeda por email (fallback robusto)
let userEmail = '';
try {
  const { data: userData } = await supabaseAdmin.auth.admin.getUserById(userId);
  userEmail = userData?.user?.email || '';
} catch (e) {
  console.error('Error obteniendo email:', e);
}

// B√∫squeda por ID o por Email (Normalizar email a min√∫sculas)
const normalizedEmail = userEmail.toLowerCase().trim();

let query = supabaseAdmin
  .from('ordenes')
  .select(`
    id,
    numero_orden,
    estado,
    estado_pago,
    total,
    subtotal,
    gastos_envio,
    fecha_creacion,
    fecha_cancelacion,
    fecha_entrega,
    actualizado_en,
    numero_seguimiento,
    direccion_envio,
    email,
    usuario_id,
    ordenes_items(
      id,
      cantidad,
      precio_unitario,
      subtotal,
      producto_id,
      productos:producto_id (
        nombre,
        urls_imagenes
      )
    )
  `);

if (normalizedEmail) {
  // PostgREST ILIKE compatible OR
  query = query.or(`usuario_id.eq."${userId}",email.ilike."${normalizedEmail}"`);
} else {
  query = query.eq('usuario_id', userId);
}

const { data: ordenes, error } = await query.order('fecha_creacion', { ascending: false });

if (error) {
  console.error('Error fetching orders:', error);
}

const pedidos = ordenes || [];

// Obtener solicitudes de devoluci√≥n existentes del usuario
const { data: devolucionesExistentes } = await supabaseAdmin
  .from('solicitudes_devolucion')
  .select('orden_id, estado')
  .eq('usuario_id', userId);

const devolucionesMap = new Map<string, string>();
if (devolucionesExistentes) {
  devolucionesExistentes.forEach((d: any) => {
    devolucionesMap.set(d.orden_id, d.estado);
  });
}

// Funci√≥n para verificar si est√° dentro de los 14 d√≠as de entrega
function dentroDeVentanaDevolucion(pedido: any): boolean {
  const fechaEntrega = pedido.fecha_entrega || pedido.actualizado_en;
  if (!fechaEntrega) return false;
  const dias = Math.floor((Date.now() - new Date(fechaEntrega).getTime()) / (1000 * 60 * 60 * 24));
  return dias <= 14;
}

// Configuraci√≥n de estados con colores y acciones
const estadosConfig: Record<string, { color: string; bgColor: string; texto: string; icono: string }> = {
  'PENDIENTE': { color: 'text-yellow-700', bgColor: 'bg-yellow-100', texto: 'Pendiente', icono: '' },
  'pendiente': { color: 'text-yellow-700', bgColor: 'bg-yellow-100', texto: 'Pendiente', icono: '' },
  'PAGADO': { color: 'text-blue-700', bgColor: 'bg-blue-100', texto: 'Pagado', icono: '' },
  'pagado': { color: 'text-blue-700', bgColor: 'bg-blue-100', texto: 'Pagado', icono: '' },
  'procesando': { color: 'text-blue-700', bgColor: 'bg-blue-100', texto: 'Procesando', icono: '' },
  'ENVIADO': { color: 'text-purple-700', bgColor: 'bg-purple-100', texto: 'Enviado', icono: '' },
  'enviado': { color: 'text-purple-700', bgColor: 'bg-purple-100', texto: 'Enviado', icono: '' },
  'ENTREGADO': { color: 'text-green-700', bgColor: 'bg-green-100', texto: 'Entregado', icono: '' },
  'entregado': { color: 'text-green-700', bgColor: 'bg-green-100', texto: 'Entregado', icono: '' },
  'CANCELADO': { color: 'text-red-700', bgColor: 'bg-red-100', texto: 'Cancelado', icono: '' },
  'cancelado': { color: 'text-red-700', bgColor: 'bg-red-100', texto: 'Cancelado', icono: '' },
};

function getEstadoConfig(estado: string) {
  return estadosConfig[estado] || { color: 'text-gray-700', bgColor: 'bg-gray-100', texto: estado, icono: '' };
}

function formatDate(dateStr: string) {
  return new Date(dateStr).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}

function formatPrice(price: number) {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(price);
}

// Determinar qu√© acciones est√°n disponibles seg√∫n el estado
function getAcciones(pedido: any) {
  const estadoUpper = (pedido.estado || '').toUpperCase();
  const tieneDevolucion = devolucionesMap.has(pedido.id);
  const enVentana = dentroDeVentanaDevolucion(pedido);
  return {
    puedeCancelar: estadoUpper === 'PAGADO',
    puedeDevolver: estadoUpper === 'ENTREGADO' && !tieneDevolucion && enVentana,
    tieneDevolucion: tieneDevolucion,
    estadoDevolucion: devolucionesMap.get(pedido.id) || null,
    fueraDeVentana: estadoUpper === 'ENTREGADO' && !tieneDevolucion && !enVentana,
    puedeSeguimiento: estadoUpper === 'ENVIADO' || estadoUpper === 'ENTREGADO',
  };
}
