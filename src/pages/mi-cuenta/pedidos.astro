            </span>
          </p>
        </div>
        
        <button id="btn-devolver-cerrar" class="w-full px-4 py-3 bg-charcoal-900 text-white rounded-lg hover:bg-charcoal-800 font-medium">
          Entendido
        </button>
      </div>
      
      <div id="return-error" class="hidden mt-4 p-4 bg-red-50 text-red-700 rounded-lg"></div>
    </div>
  </div>

  <style>
    .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      padding: 1rem;
    }
    
    .modal-overlay.hidden {
      display: none;
    }
    
    .modal-content {
      background: white;
      border-radius: 16px;
      padding: 2rem;
      max-width: 480px;
      width: 100%;
      position: relative;
      max-height: 90vh;
      overflow-y: auto;
      animation: slideUp 0.3s ease;
    }
    
    .modal-content.modal-lg {
      max-width: 560px;
    }
    
    @keyframes slideUp {
      from { transform: translateY(20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    
    .modal-close {
      position: absolute;
      top: 1rem;
      right: 1rem;
      width: 32px;
      height: 32px;
      border: none;
      background: #f3f4f6;
      border-radius: 50%;
      font-size: 1.5rem;
      cursor: pointer;
      color: #666;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
    }
    
    .modal-close:hover {
      background: #e5e7eb;
      color: #1a1a1a;
    }
  </style>

  <script define:vars={{ userId }}>
    // Logout
    document.getElementById('logout-btn')?.addEventListener('click', async () => {
      try {
        await fetch('/api/auth/logout');
        window.location.href = '/';
      } catch (e) {
        console.error('Error en logout:', e);
        window.location.href = '/';
      }
    });

    // === MODAL CANCELAR ===
    const modalCancelar = document.getElementById('modal-cancelar');
    const cancelOrdenNumero = document.getElementById('cancel-orden-numero');
    let currentCancelOrdenId = null;

    document.querySelectorAll('.btn-cancelar').forEach(btn => {
      btn.addEventListener('click', () => {
        currentCancelOrdenId = btn.dataset.ordenId;
        cancelOrdenNumero.textContent = btn.dataset.ordenNumero;
        modalCancelar?.classList.remove('hidden');
      });
    });

    document.getElementById('btn-cancelar-no')?.addEventListener('click', () => {
      modalCancelar?.classList.add('hidden');
    });

    document.querySelector('#modal-cancelar .modal-close')?.addEventListener('click', () => {
      modalCancelar?.classList.add('hidden');
    });

    document.getElementById('btn-cancelar-si')?.addEventListener('click', async () => {
      if (!currentCancelOrdenId) return;
      
      const btnSi = document.getElementById('btn-cancelar-si');
      const btnNo = document.getElementById('btn-cancelar-no');
      const loading = document.getElementById('cancel-loading');
      const errorDiv = document.getElementById('cancel-error');
      
      btnSi.classList.add('hidden');
      btnNo.classList.add('hidden');
      loading?.classList.remove('hidden');
      errorDiv?.classList.add('hidden');
      
      try {
        const response = await fetch('/api/pedidos/cancelar', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            orden_id: currentCancelOrdenId,
            usuario_id: userId
          })
        });
        
        const result = await response.json();
        
        if (!response.ok || result.error) {
          throw new Error(result.error || 'Error al cancelar');
        }
        
        // √âxito - recargar p√°gina
        window.location.reload();
        
      } catch (error) {
        loading?.classList.add('hidden');
        btnSi?.classList.remove('hidden');
        btnNo?.classList.remove('hidden');
        if (errorDiv) {
          errorDiv.textContent = error.message;
          errorDiv.classList.remove('hidden');
        }
      }
    });

    // === MODAL DEVOLVER ===
    const modalDevolver = document.getElementById('modal-devolver');
    const returnOrdenNumero = document.getElementById('return-orden-numero');
    const returnOrdenId = document.getElementById('return-orden-id');
    const returnTotal = document.getElementById('return-total');
    let currentReturnOrdenTotal = 0;

    document.querySelectorAll('.btn-devolver').forEach(btn => {
      btn.addEventListener('click', () => {
        returnOrdenId.value = btn.dataset.ordenId;
        returnOrdenNumero.textContent = btn.dataset.ordenNumero;
        currentReturnOrdenTotal = parseFloat(btn.dataset.ordenTotal);
        returnTotal.textContent = new Intl.NumberFormat('es-ES', { style: 'currency', currency: 'EUR' }).format(currentReturnOrdenTotal);
        
        // Reset modal state
        document.getElementById('devolucion-paso1')?.classList.remove('hidden');
        document.getElementById('devolucion-paso2')?.classList.add('hidden');
        document.getElementById('return-error')?.classList.add('hidden');
        document.getElementById('form-devolucion')?.reset();
        
        modalDevolver?.classList.remove('hidden');
      });
    });

    document.getElementById('btn-devolver-cancelar')?.addEventListener('click', () => {
      modalDevolver?.classList.add('hidden');
    });

    document.getElementById('btn-devolver-cerrar')?.addEventListener('click', () => {
      modalDevolver?.classList.add('hidden');
      window.location.reload();
    });

    document.querySelector('#modal-devolver .modal-close')?.addEventListener('click', () => {
      modalDevolver?.classList.add('hidden');
    });

    document.getElementById('form-devolucion')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const form = e.target;
      const loading = document.getElementById('return-loading');
      const errorDiv = document.getElementById('return-error');
      const paso1 = document.getElementById('devolucion-paso1');
      
      form.classList.add('hidden');
      loading?.classList.remove('hidden');
      errorDiv?.classList.add('hidden');
      
      try {
        const response = await fetch('/api/pedidos/solicitar-devolucion', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            orden_id: returnOrdenId.value,
            usuario_id: userId,
            motivo: form.motivo.value,
            descripcion: form.descripcion.value
          })
        });
        
        const result = await response.json();
        
        if (!response.ok || result.error) {
          throw new Error(result.error || 'Error al procesar solicitud');
        }
        
        // Mostrar paso 2 con instrucciones
        loading?.classList.add('hidden');
        paso1?.classList.add('hidden');
        document.getElementById('devolucion-paso2')?.classList.remove('hidden');
        document.getElementById('etiqueta-numero').textContent = result.numero_etiqueta || 'DEV-XXXXX';
        
      } catch (error) {
        loading?.classList.add('hidden');
        form.classList.remove('hidden');
        if (errorDiv) {
          errorDiv.textContent = error.message;
          errorDiv.classList.remove('hidden');
        }
      }
    });

    // Cerrar modales con Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        modalCancelar?.classList.add('hidden');
        modalDevolver?.classList.add('hidden');
      }
    });

    // Cerrar modales al hacer clic fuera
    [modalCancelar, modalDevolver].forEach(modal => {
      modal?.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.add('hidden');
        }
      });
    });
  </script>
