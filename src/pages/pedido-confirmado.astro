import PublicLayout from "@/layouts/PublicLayout.astro";
import { getSupabaseAdmin } from "@/lib/supabase";

const title = "Â¡Pedido Confirmado!";
const description = "Tu pedido ha sido procesado correctamente";

interface Orden {
  id: string;
  numero_orden: string;
  created_at: string;
  creada_en: string;
  estado: string;
  subtotal: number;
  descuento: number;
  gastos_envio: number;
  total: number;
  direccion_envio: any;
}

interface OrdenItem {
  id: string;
  producto_id: string;
  cantidad: number;
  precio_unitario: number;
  nombre_producto: string;
  productos?: { nombre: string; urls_imagenes: string[] };
}

// Obtener orden de la URL
const url = new URL(Astro.request.url);
const ordenId = url.searchParams.get('orden');

let orden: Orden | null = null;
let items: OrdenItem[] = [];

if (ordenId) {
  const supabaseAdmin = getSupabaseAdmin();
  
  // Cargar orden
  const { data: ordenData } = await supabaseAdmin
    .from('ordenes')
    .select('*')
    .or(`id.eq.${ordenId},numero_orden.eq.${ordenId}`)
    .single();
  
  orden = ordenData as Orden | null;
  
  // Cargar items de la orden
  if (orden) {
    const { data: itemsData } = await supabaseAdmin
      .from('ordenes_items')
      .select(`
        *,
        productos:producto_id (nombre, urls_imagenes)
      `)
      .eq('orden_id', orden.id);
    
    items = (itemsData || []) as OrdenItem[];
  }
}

function formatPrice(precio: number): string {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(precio);
}
