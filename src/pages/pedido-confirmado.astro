          console.warn('‚ö†Ô∏è No se pudo limpiar sessionStorage:', e);
        }
        
        // Disparar evento personalizado para nanostores
        try {
          window.dispatchEvent(new CustomEvent('cart-cleared', { 
            detail: { sessionId } 
          }));
          console.log('‚úÖ Evento de carrito limpiado disparado');
        } catch (e) {
          console.warn('‚ö†Ô∏è Error disparando evento:', e);
        }
      }
    } catch (error) {
      console.error('‚ùå Error limpiando carrito:', error);
    }
  }
</script>
