// src/pages/pedido-confirmado.astro
// P√°gina de confirmaci√≥n de pedido - Recupera datos desde BD

import PublicLayout from "@/layouts/PublicLayout.astro";
import { getSupabaseAdmin } from "@/lib/supabase";
import CartCleaner from "@/components/islands/CartCleaner";

const title = "¬°Pedido Confirmado!";
const description = "Tu pedido ha sido procesado correctamente";

interface Orden {
  id: string;
  numero_orden: string;
  estado: string;
  estado_pago: string;
  subtotal: number;
  descuento_aplicado: number;
  costo_envio: number;
  total: number;
  direccion_envio: any;
  telefono_envio: string;
  fecha_creacion: string;
  fecha_pago: string;
  impuestos: number;
  items: any[];
}

// Obtener par√°metros de la URL
const url = new URL(Astro.request.url);
const sessionId = url.searchParams.get('session_id');
const ordenId = url.searchParams.get('orden');
const usuarioId = Astro.cookies.get('user-id')?.value;

let orden: Orden | null = null;
let error = null;

// Procesar sesi√≥n de Stripe primero
if (sessionId) {
  try {
    console.log('üì¶ Procesando sesi√≥n de Stripe:', sessionId);
    
    // Llamar al endpoint que procesa Stripe y retorna orden_id
    const response = await fetch(`${import.meta.env.SITE}/api/pagos/procesar-stripe`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ session_id: sessionId })
    });

    const resultado = await response.json();

    if (resultado.success && resultado.orden_id) {
      console.log('‚úÖ Orden creada desde Stripe:', resultado.numero_orden);
      
      // Redirigir a la misma p√°gina pero con orden_id en lugar de session_id
      return Astro.redirect(`/pedido-confirmado?orden=${resultado.orden_id}`);
    } else {
      error = resultado.error || 'Error procesando el pago';
      console.error('‚ùå Error en Stripe:', error);
    }
  } catch (e) {
    console.error('‚ùå Error en procesamiento de Stripe:', e);
    error = 'Error al procesar el pago';
  }
}

// Cargar orden desde BD si tenemos ordenId
if (ordenId && !sessionId) {
  try {
    const response = await fetch(`${import.meta.env.SITE}/api/ordenes/${ordenId}`, {
      headers: {
        'Cookie': `user-id=${usuarioId || ''}`
      }
    });

    const resultado = await response.json();

    if (resultado.success && resultado.orden) {
      orden = resultado.orden;
      console.log('‚úÖ Orden cargada desde BD:', orden.numero_orden);
    } else {
      error = resultado.error || 'No se encontr√≥ la orden';
      console.error('‚ùå Error cargando orden:', error);
    }
  } catch (e) {
    console.error('‚ùå Error cargando orden desde API:', e);
    error = 'Error al cargar la orden';
  }
}

function formatPrice(precio: number | undefined): string {
  if (!precio && precio !== 0) return '0,00 ‚Ç¨';
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(precio);
}

function formatDate(fecha: string | undefined): string {
  if (!fecha) return 'No disponible';
  return new Date(fecha).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
