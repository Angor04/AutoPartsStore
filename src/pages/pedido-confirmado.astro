---
// src/pages/pedido-confirmado.astro
// Página de confirmación de pedido - Recupera datos desde BD

import PublicLayout from "@/layouts/PublicLayout.astro";
import { getSupabaseAdmin } from "@/lib/supabase";
import CartCleaner from "@/components/islands/CartCleaner";

const title = "¡Pedido Confirmado!";
const description = "Tu pedido ha sido procesado correctamente";

interface Orden {
  id: string;
  numero_orden: string;
  estado: string;
  estado_pago: string;
  subtotal: number;
  descuento_aplicado: number;
  costo_envio: number;
  total: number;
  direccion_envio: any;
  telefono_envio: string;
  email_cliente: string;
  nombre_cliente?: string;
  items: any[];
  // Propiedades usadas en la plantilla:
  fecha_creacion?: string;
  nombre?: string;
  email?: string;
  impuestos?: number;
  usuario_id?: string | null;
}

// Obtener parámetros de la URL
const url = new URL(Astro.request.url);
const sessionId = url.searchParams.get('session_id');
const ordenId = url.searchParams.get('orden');
const usuarioId = Astro.cookies.get('user-id')?.value;

let orden: Orden | null = null;
let error = null;

// Procesar sesión de Stripe primero
if (sessionId) {
  try {
    
    const supabaseAdmin = getSupabaseAdmin();
    
    // 1. Buscar si la orden ya fue creada (por el propio endpoint o webhook)
    const { data: ordenExistente } = await supabaseAdmin
      .from('ordenes')
      .select('id, numero_orden')
      .eq('session_stripe_id', sessionId)
      .maybeSingle();

    if (ordenExistente) {
      return Astro.redirect(`/pedido-confirmado?orden=${ordenExistente.id}`);
    }

    // 2. Si no existe aún, llamar al endpoint para crearla (usar localhost para evitar reverse proxy)
    const port = process.env.PORT || '4321';
    const internalUrl = `http://localhost:${port}/api/pagos/procesar-stripe`;
    
    const response = await fetch(internalUrl, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ session_id: sessionId })
    });

    const resultado = await response.json();

    if (resultado.success && resultado.orden_id) {
      return Astro.redirect(`/pedido-confirmado?orden=${resultado.orden_id}`);
    } else {
      error = resultado.error || 'Error procesando el pago';
      console.error('Error en Stripe:', error);
    }
  } catch (e) {
    console.error('Error en procesamiento de Stripe:', e);
    error = 'Error al procesar el pago';
  }
}

// Cargar orden desde BD si tenemos ordenId
// Cargar orden desde BD si tenemos ordenId
if (ordenId && !sessionId) {
  try {
    const supabaseAdmin = getSupabaseAdmin();

    // 1. Obtener la orden
    const { data: ordenData, error: ordenError } = await supabaseAdmin
      .from('ordenes')
      .select('*')
      .eq('id', ordenId)
      .single();

    if (ordenError || !ordenData) {
      console.error('Error cargando orden (BD):', ordenError);
      error = 'No se encontró la orden en la base de datos';
    } else {
      // 2. Obtener items con productos
      const { data: itemsData, error: itemsError } = await supabaseAdmin
        .from('ordenes_items')
        .select(`
          *,
          productos:producto_id (
            nombre,
            urls_imagenes
          )
        `)
        .eq('orden_id', ordenId);

      if (itemsError) {
        console.error('Error cargando items (BD):', itemsError);
      }

      // 3. Formatear items
      const itemsFormatted = itemsData?.map((item: any) => ({
        ...item,
        nombre_producto: item.productos?.nombre || 'Producto desconocido',
        urls_imagenes: item.productos?.urls_imagenes || []
      })) || [];

      // 4. Construir objeto orden completo
      orden = {
        id: ordenData.id,
        numero_orden: ordenData.numero_orden,
        estado: ordenData.estado,
        estado_pago: ordenData.estado_pago,
        subtotal: ordenData.subtotal,
        descuento_aplicado: 0,
        costo_envio: ordenData.gastos_envio || 0,
        total: ordenData.total,
        direccion_envio: ordenData.direccion_envio,
        telefono_envio: ordenData.telefono || '',
        email_cliente: ordenData.email,
        email: ordenData.email,
        nombre_cliente: ordenData.nombre,
        nombre: ordenData.nombre,
        items: itemsFormatted,
        fecha_creacion: ordenData.created_at || ordenData.fecha_creacion,
        impuestos: ordenData.impuestos,
        usuario_id: ordenData.usuario_id
      };
      
    }
  } catch (e) {
    console.error('Error general cargando orden:', e);
    error = 'Error interno al cargar la orden';
  }
}

function formatPrice(precio: number | undefined): string {
  if (!precio && precio !== 0) return '0,00 €';
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(precio);
}

function formatDate(fecha: string | undefined): string {
  if (!fecha) return 'No disponible';
  return new Date(fecha).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<PublicLayout title={title} description={description}>
  <!-- Componente para limpiar SIEMPRE el carrito al llegar a esta página -->
  <CartCleaner client:load sessionId={ordenId || sessionId || ''} />
  
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    
    {orden ? (
      <div class="text-center mb-12">
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        
        <h1 class="text-3xl font-serif font-bold text-charcoal-900 mb-2">
          ¡Gracias por tu compra!
        </h1>
        <p class="text-lg text-charcoal-600">
          Tu pedido ha sido confirmado y está siendo procesado
        </p>
      </div>

      <!-- Info de la orden -->
      <div class="bg-white rounded-lg shadow-sm p-4 md:p-6 mb-6 md:mb-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 text-center">
          <div>
            <p class="text-[10px] md:text-sm text-charcoal-500 mb-1">Nº pedido</p>
            <p class="text-sm md:text-base font-bold text-navy-600 truncate">{orden.numero_orden}</p>
          </div>
          <div>
            <p class="text-sm text-charcoal-500 mb-1">Fecha</p>
            <p class="font-semibold">{formatDate(orden.fecha_creacion)}</p>
          </div>
          <div>
            <p class="text-[10px] md:text-sm text-charcoal-500 mb-1">Estado</p>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[10px] md:text-xs font-medium"
              class:list={{
                'bg-green-100 text-green-800': orden.estado === 'PAGADO' || orden.estado === 'COMPLETADO',
                'bg-yellow-100 text-yellow-800': orden.estado === 'PENDIENTE',
                'bg-red-100 text-red-800': orden.estado === 'CANCELADO'
              }}>
              {orden.estado}
            </span>
          </div>
          <div>
            <p class="text-[10px] md:text-sm text-charcoal-500 mb-1">Total</p>
            <p class="font-bold text-base md:text-lg text-red-600">{formatPrice(orden.total)}</p>
          </div>
        </div>
        
        <div class="mt-4 md:mt-6 pt-4 md:pt-6 border-t border-charcoal-100 grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
          <div>
            <p class="text-[9px] md:text-xs text-charcoal-500 uppercase tracking-wider font-semibold mb-1">Cliente</p>
            <p class="text-sm md:text-base text-charcoal-800 font-medium">{orden.nombre || 'Invitado'}</p>
          </div>
          <div>
            <p class="text-[9px] md:text-xs text-charcoal-500 uppercase tracking-wider font-semibold mb-1">Email de contacto</p>
            <p class="text-sm md:text-base text-charcoal-800 font-medium truncate">{orden.email}</p>
          </div>
        </div>
      </div>

      <!-- Productos comprados -->
      <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
        <h2 class="text-xl font-serif font-bold text-charcoal-900 mb-4">Productos Comprados</h2>
        
        <div class="divide-y divide-charcoal-100">
          {orden.items && orden.items.length > 0 ? (
            orden.items.map((item: any) => {
              const productImg = item.urls_imagenes?.[0] || null;
              return (
                <div class="py-3 md:py-4 flex items-center justify-between gap-3 md:gap-4">
                  <div class="flex items-center gap-3 md:gap-4 flex-1 min-w-0">
                    <div class="w-10 h-10 md:w-12 md:h-12 bg-gray-100 rounded flex items-center justify-center overflow-hidden border border-gray-100 flex-shrink-0">
                      {productImg ? (
                        <img src={productImg} alt={item.nombre_producto} class="w-full h-full object-cover" />
                      ) : (
                        <span class="text-xl"></span>
                      )}
                    </div>
                    <div class="min-w-0">
                      <p class="text-sm md:text-base font-medium text-charcoal-900 truncate">{item.nombre_producto}</p>
                      <p class="text-xs md:text-sm text-charcoal-500">Cant: {item.cantidad} × {formatPrice(item.precio_unitario)}</p>
                    </div>
                  </div>
                  <p class="text-sm md:text-base font-semibold text-charcoal-900 whitespace-nowrap">{formatPrice(item.subtotal)}</p>
                </div>
              );
            })
          ) : (
            <div class="py-4 text-center text-charcoal-500">
              <p>No hay productos en este pedido</p>
            </div>
          )}
        </div>

        <div class="border-t border-charcoal-200 pt-4 mt-4 space-y-2">
          <div class="flex justify-between text-charcoal-600">
            <span>Subtotal</span>
            <span>{formatPrice(orden.subtotal)}</span>
          </div>
          {orden.impuestos ? (
            <div class="flex justify-between text-charcoal-600">
              <span>Impuestos</span>
              <span>{formatPrice(orden.impuestos)}</span>
            </div>
          ) : null}
          {(() => {
            const calculadoDescuento = (orden.subtotal || 0) + (orden.costo_envio || 0) - (orden.total || 0);
            return calculadoDescuento > 0.01 ? (
              <div class="flex justify-between text-green-600">
                <span>Descuento</span>
                <span>-{formatPrice(calculadoDescuento)}</span>
              </div>
            ) : null;
          })()}
          <div class="flex justify-between text-charcoal-600">
            <span>Envío</span>
            <span>{orden.costo_envio === 0 ? 'Gratis' : formatPrice(orden.costo_envio)}</span>
          </div>
          <div class="flex justify-between font-bold text-lg pt-2 border-t border-charcoal-100">
            <span>Total</span>
            <span>{formatPrice(orden.total)}</span>
          </div>
        </div>
      </div>

      <!-- Próximos pasos -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
        <h3 class="font-semibold text-blue-900 mb-3">¿Qué sigue ahora?</h3>
        <ul class="space-y-2 text-blue-800 text-sm">
          <li class="flex items-start gap-2">
            <span class="mt-1">✓</span>
            <span>Recibirás un email de confirmación con los detalles de tu pedido</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1">✓</span>
            <span>Te notificaremos cuando tu pedido sea enviado con el número de seguimiento</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="mt-1">✓</span>
            <span>Puedes seguir el estado de tu pedido desde "Mi Cuenta"</span>
          </li>
        </ul>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        {(orden.usuario_id && (usuarioId || Astro.cookies.get('sb-access-token')?.value)) ? (
          <a 
            href="/mi-cuenta/pedidos" 
            class="px-8 py-3 bg-navy-500 text-white font-semibold rounded-lg hover:bg-navy-600 transition-colors text-center"
          >
            Ver Mis Pedidos
          </a>
        ) : (
          /* Botón para invitados */
          <a 
            href={`/estado-pedido?orden=${orden.numero_orden}&email=${orden.email}`}
            class="px-8 py-3 bg-navy-500 text-white font-semibold rounded-lg hover:bg-navy-600 transition-colors text-center"
          >
            Ver Estado del Pedido
          </a>
        )}
        <a 
          href="/productos" 
          class="px-8 py-3 bg-white border border-charcoal-300 text-charcoal-700 font-semibold rounded-lg hover:bg-charcoal-50 transition-colors text-center"
        >
          Seguir Comprando
        </a>
      </div>
    ) : (
      <!-- Sin orden -->
      <div class="text-center py-16">
        <div class="w-20 h-20 bg-charcoal-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-charcoal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-serif font-bold text-charcoal-900 mb-2">No se encontró el pedido</h2>
        <p class="text-charcoal-600 mb-6">{error || 'No pudimos encontrar la información del pedido. Asegúrate de haber completado el proceso de pago correctamente.'}</p>
        <a 
          href="/productos" 
          class="inline-block px-8 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors"
        >
          Ver Productos
        </a>
      </div>
    )}
  </div>
</PublicLayout>

