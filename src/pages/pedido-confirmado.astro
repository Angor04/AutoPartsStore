// src/pages/pedido-confirmado.astro
// P√°gina de confirmaci√≥n de pedido - Compatible con Stripe y checkout tradicional

import PublicLayout from "@/layouts/PublicLayout.astro";
import { getSupabaseAdmin } from "@/lib/supabase";

const title = "¬°Pedido Confirmado!";
const description = "Tu pedido ha sido procesado correctamente";

interface Orden {
  id: string;
  numero_orden: string;
  created_at: string;
  creada_en: string;
  estado: string;
  subtotal: number;
  descuento_aplicado: number;
  costo_envio: number;
  total: number;
  direccion_envio: any;
  email_cliente: string;
  fecha_pago: string;
}

interface OrdenItem {
  id: string;
  producto_id: string;
  cantidad: number;
  precio_unitario: number;
  nombre_producto: string;
  subtotal: number;
  productos?: { nombre: string; urls_imagenes: string[] };
}

// Obtener orden - puede venir de Stripe (session_id) o directamente (orden)
const url = new URL(Astro.request.url);
const sessionId = url.searchParams.get('session_id');
const ordenId = url.searchParams.get('orden');

let orden: Orden | null = null;
let items: OrdenItem[] = [];
let error = null;

const supabaseAdmin = getSupabaseAdmin();

// Si viene de Stripe
if (sessionId) {
  try {
    console.log('üì¶ Procesando sesi√≥n de Stripe:', sessionId);
    
    // Llamar al endpoint que procesa Stripe
    const response = await fetch(`${import.meta.env.SITE}/api/pagos/procesar-stripe`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ session_id: sessionId })
    });

    const resultado = await response.json();

    if (resultado.success && resultado.orden_id) {
      console.log('‚úÖ Orden creada desde Stripe:', resultado.numero_orden);
      
      // Cargar la orden que acabamos de crear
      const { data: ordenData } = await supabaseAdmin
        .from('ordenes')
        .select('*')
        .eq('id', resultado.orden_id)
        .single();
      
      orden = ordenData as Orden | null;
    } else {
      error = resultado.error || 'Error procesando el pago';
      console.error('‚ùå Error en Stripe:', error);
    }
  } catch (e) {
    console.error('‚ùå Error en procesamiento de Stripe:', e);
    error = 'Error al procesar el pago';
  }
}
// Si viene de checkout tradicional
else if (ordenId) {
  const { data: ordenData } = await supabaseAdmin
    .from('ordenes')
    .select('*')
    .or(`id.eq.${ordenId},numero_orden.eq.${ordenId}`)
    .single();
  
  orden = ordenData as Orden | null;
}

// Cargar items si tenemos orden
if (orden) {
  // Los items est√°n en el JSON 'productos' de la orden
  if (orden.productos && Array.isArray(orden.productos)) {
    items = orden.productos.map((prod: any) => ({
      id: `${prod.producto_id || '0'}`,
      producto_id: `${prod.producto_id || '0'}`,
      cantidad: prod.cantidad || 0,
      precio_unitario: prod.precio_unitario || prod.precio || 0,
      nombre_producto: prod.nombre || 'Producto desconocido',
      subtotal: prod.subtotal || 0
    })) as OrdenItem[];
  }
}

function formatPrice(precio: number): string {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR'
  }).format(precio);
}

function formatDate(fecha: string): string {
  return new Date(fecha).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<PublicLayout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    {orden ? (
      <div class="text-center mb-12">
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
