---
// src/pages/categoria/[slug].astro
// Página de categoría con filtrado

export const prerender = false;

import PublicLayout from "@/layouts/PublicLayout.astro";
import ProductCard from "@/components/product/ProductCard.astro";
import CartSlideOver from "@/components/ui/CartSlideOver.astro";
import { getCategories, getProductsByCategory, getProducts } from "@/lib/supabase";
import type { Category, Product } from "@/types/index";

const slug = Astro.params.slug;
const categorias: Category[] = await getCategories();
const categoria = categorias.find((c) => c.slug === slug);

if (!categoria) {
  return new Response("Categoría no encontrada", { status: 404 });
}

const productos: Product[] = await getProductsByCategory(categoria.id);

const title = categoria.nombre;
const description = `Descubre nuestra colección de ${categoria.nombre.toLowerCase()}`;
---

<PublicLayout title={title} description={description}>
  <CartSlideOver />

  <!-- Header -->
  <div class="bg-red-600 text-ivory-50 py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold">{categoria.nombre}</h1>
      <p class="text-ivory-200 mt-2 text-sm">{categoria.descripcion || description}</p>
    </div>
  </div>

  <!-- Products Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar Filters -->
      <aside class="lg:col-span-1">
        <div class="bg-white rounded-lg p-6 shadow-sm sticky top-24 border border-charcoal-200">
          <h3 class="text-lg font-bold text-charcoal-900 mb-6">Categorías</h3>

          <!-- Categories Filter -->
          <div class="mb-8">
            <ul class="space-y-2">
              <li>
                <a href="/productos" class="text-charcoal-600 hover:text-red-600 transition-colors text-sm">
                  Todas
                </a>
              </li>
              {categorias.map((cat) => (
                <li>
                  <a
                    href={`/categoria/${cat.slug}`}
                    class={cat.id === categoria.id ? "text-red-600 hover:text-red-700 font-medium text-sm" : "text-charcoal-600 hover:text-red-600 transition-colors text-sm"}
                  >
                    {cat.nombre}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </aside>

      <!-- Products Grid -->
      <div class="lg:col-span-3">
        {productos && productos.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {productos.map((product) => (
              <ProductCard product={product} />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <p class="text-lg text-charcoal-600 mb-4">
              No hay productos disponibles en esta categoría
            </p>
          </div>
        )}
      </div>
    </div>
  </div>
</PublicLayout>
