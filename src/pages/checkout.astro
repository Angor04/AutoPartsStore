// src/pages/checkout.astro
// P√°gina de checkout completa con validaci√≥n de stock
// VERSI√ìN PRODUCCI√ìN

import PublicLayout from "@/layouts/PublicLayout.astro";
import { getSupabaseAdmin } from "@/lib/supabase";

const title = "Finalizar Compra";
const description = "Completa tu pedido de forma segura";

// Verificar autenticaci√≥n
const userId = Astro.cookies.get('user-id')?.value;
const userEmail = Astro.cookies.get('user-email')?.value;

if (!userId) {
  return Astro.redirect('/auth/login?redirect=/checkout');
}

// Cargar direcci√≥n guardada del usuario
const supabaseAdmin = getSupabaseAdmin();

interface DireccionEnvio {
  direccion: string;
  ciudad: string;
  provincia: string;
  codigo_postal: string;
  pais: string;
}

interface PerfilUsuario {
  nombre: string;
  apellidos: string;
  telefono: string;
}

const { data: direccionData } = await supabaseAdmin
  .from('direcciones_envio')
  .select('*')
  .eq('usuario_id', userId)
  .eq('es_principal', true)
  .single();

const direccion = direccionData as DireccionEnvio | null;

const { data: perfilData } = await supabaseAdmin
  .from('perfiles_usuario')
  .select('nombre, apellidos, telefono')
  .eq('usuario_id', userId)
  .single();

const perfil = perfilData as PerfilUsuario | null;
---

<PublicLayout title={title} description={description}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-sm text-charcoal-600 mb-6">
      <a href="/" class="hover:text-navy-500">Inicio</a>
      <span>/</span>
      <a href="/carrito" class="hover:text-navy-500">Carrito</a>
      <span>/</span>
      <span>Checkout</span>
    </div>

    <!-- Indicador de pasos -->
    <div class="flex items-center justify-center mb-8">
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center text-sm font-bold">‚úì</div>
