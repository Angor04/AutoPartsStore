  </div>
</PublicLayout>

<script is:inline>
  // ==================================================
  // VARIABLES GLOBALES
  // ==================================================
  let cartItems = [];
  let subtotal = 0;
  let descuento = 0;
  let codigoCuponAplicado = null;
  const ENVIO_GRATIS_DESDE = 50;
  const COSTO_ENVIO = 4.99;

  // ==================================================
  // CARGAR CARRITO
  // ==================================================
  function cargarCarrito() {
    try {
      const stored = sessionStorage.getItem('autopartsstore-cart');
      cartItems = stored ? JSON.parse(stored) : [];
      
      if (cartItems.length === 0) {
        window.location.href = '/carrito';
        return;
      }
      
      renderizarProductos();
      calcularTotales();
    } catch (e) {
      console.error('Error cargando carrito:', e);
    }
  }

  // ==================================================
  // RENDERIZAR PRODUCTOS
  // ==================================================
  function renderizarProductos() {
    const container = document.getElementById('productosLista');
    
    if (cartItems.length === 0) {
      container.innerHTML = '<p class="text-charcoal-500">Carrito vac√≠o</p>';
      return;
    }
    
    container.innerHTML = cartItems.map(item => `
      <div class="flex items-center gap-3 pb-3 border-b border-charcoal-50">
        <img 
          src="${item.imagen || '/images/placeholder.jpg'}" 
          alt="${item.nombre}"
          class="w-12 h-12 object-cover rounded"
        />
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-charcoal-900 truncate">${item.nombre}</p>
          <p class="text-xs text-charcoal-500">Cant: ${item.quantity}</p>
        </div>
        <span class="text-sm font-semibold text-charcoal-700">
          ‚Ç¨${(item.precio * item.quantity).toFixed(2)}
        </span>
      </div>
    `).join('');
  }

  // ==================================================
  // CALCULAR TOTALES
  // ==================================================
  function calcularTotales() {
    subtotal = cartItems.reduce((sum, item) => sum + (item.precio * item.quantity), 0);
    const envio = subtotal >= ENVIO_GRATIS_DESDE ? 0 : COSTO_ENVIO;
    const total = subtotal - descuento + envio;
    
    document.getElementById('subtotalDisplay').textContent = `‚Ç¨${subtotal.toFixed(2)}`;
    document.getElementById('envioDisplay').textContent = envio === 0 ? 'Gratis üéâ' : `‚Ç¨${envio.toFixed(2)}`;
    document.getElementById('totalDisplay').textContent = `‚Ç¨${total.toFixed(2)}`;
    
    // Mostrar/ocultar descuento
    const descuentoRow = document.getElementById('descuentoRow');
    if (descuento > 0) {
      descuentoRow.style.display = 'flex';
      document.getElementById('descuentoDisplay').textContent = `-‚Ç¨${descuento.toFixed(2)}`;
    } else {
      descuentoRow.style.display = 'none';
    }
  }

  // ==================================================
  // VALIDAR CUP√ìN
  // ==================================================
  async function validarCupon() {
    const input = document.getElementById('cupon');
    const codigo = input.value.trim().toUpperCase();
    const mensaje = document.getElementById('cuponMensaje');
    
    if (!codigo) return;
    
    mensaje.className = 'mt-3 p-2 rounded text-sm bg-blue-50 text-blue-700';
    mensaje.textContent = 'Validando cup√≥n...';
    mensaje.classList.remove('hidden');
    
    try {
      const response = await fetch('/api/cupones/validar', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ codigo, subtotal })
      });
      
      const data = await response.json();
      
      if (data.valido) {
        descuento = data.descuento_calculado || 0;
        codigoCuponAplicado = codigo;
        
        mensaje.classList.add('hidden');
        
        const cuponAplicado = document.getElementById('cuponAplicado');
        document.getElementById('cuponTexto').textContent = `${codigo} - ${data.descripcion || 'Descuento aplicado'}`;
        cuponAplicado.style.display = 'flex';
        
        input.value = '';
        input.disabled = true;
        document.getElementById('btnAplicarCupon').disabled = true;
        
        calcularTotales();
      } else {
        mensaje.className = 'mt-3 p-2 rounded text-sm bg-red-50 text-red-700';
        mensaje.textContent = data.mensaje || 'Cup√≥n no v√°lido';
      }
    } catch (error) {
      mensaje.className = 'mt-3 p-2 rounded text-sm bg-red-50 text-red-700';
      mensaje.textContent = 'Error al validar cup√≥n';
    }
  }

  // ==================================================
  // QUITAR CUP√ìN
  // ==================================================
  function quitarCupon() {
    descuento = 0;
    codigoCuponAplicado = null;
    
    document.getElementById('cuponAplicado').style.display = 'none';
    document.getElementById('cupon').disabled = false;
    document.getElementById('btnAplicarCupon').disabled = false;
    document.getElementById('cuponMensaje').classList.add('hidden');
    
    calcularTotales();
  }

  // ==================================================
  // ENVIAR PEDIDO
  // ==================================================
  async function enviarPedido(e) {
    e.preventDefault();
    
    const form = document.getElementById('checkoutForm');
    const btnPagar = document.getElementById('btnPagar');
    const estadoMensaje = document.getElementById('estadoMensaje');
    
    // Validar formulario
    if (!form.checkValidity()) {
      form.reportValidity();
      return;
    }
    
    btnPagar.disabled = true;
    btnPagar.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path></svg> Procesando...';
    
    estadoMensaje.className = 'mt-4 p-3 rounded-lg text-center bg-blue-50 text-blue-700';
    estadoMensaje.textContent = 'Verificando stock y procesando pedido...';
    estadoMensaje.classList.remove('hidden');
    
    try {
      const formData = new FormData(form);
      
      const items = cartItems.map(item => ({
        producto_id: item.id,
        cantidad: item.quantity,
        precio_unitario: item.precio,
        nombre: item.nombre
      }));
      
      const response = await fetch('/api/checkout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          items,
          direccion_envio: {
            nombre: formData.get('nombre'),
            apellidos: formData.get('apellidos'),
            direccion: formData.get('direccion'),
            ciudad: formData.get('ciudad'),
            codigo_postal: formData.get('codigo_postal'),
            provincia: formData.get('provincia'),
            telefono: formData.get('telefono')
          },
          codigo_cupon: codigoCuponAplicado,
          metodo_pago: 'tarjeta',
          notas: formData.get('notas') || null
        })
      });
      
      const data = await response.json();
      
      if (data.success) {
        // Limpiar carrito
        sessionStorage.removeItem('autopartsstore-cart');
        
        // Mostrar √©xito y redirigir
        estadoMensaje.className = 'mt-4 p-3 rounded-lg text-center bg-green-50 text-green-700';
        estadoMensaje.innerHTML = `
          <p class="font-bold">‚úÖ ¬°Pedido realizado con √©xito!</p>
          <p class="text-sm mt-1">N√∫mero de orden: ${data.numero_orden}</p>
          <p class="text-sm">Redirigiendo...</p>
        `;
        
        setTimeout(() => {
          window.location.href = `/pedido-confirmado?orden=${data.orden_id}`;
        }, 2000);
        
      } else {
        // Mostrar errores de stock
        if (data.detalles && data.detalles.length > 0) {
          const stockAlert = document.getElementById('stockAlert');
          const stockErrores = document.getElementById('stockErrores');
          stockErrores.innerHTML = data.detalles.map(e => `<li>‚Ä¢ ${e}</li>`).join('');
          stockAlert.classList.remove('hidden');
        }
        
        estadoMensaje.className = 'mt-4 p-3 rounded-lg text-center bg-red-50 text-red-700';
        estadoMensaje.textContent = data.error || 'Error al procesar el pedido';
        
        btnPagar.disabled = false;
        btnPagar.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg><span>Confirmar Pedido</span>';
      }
    } catch (error) {
      console.error('Error:', error);
      estadoMensaje.className = 'mt-4 p-3 rounded-lg text-center bg-red-50 text-red-700';
      estadoMensaje.textContent = 'Error de conexi√≥n. Int√©ntalo de nuevo.';
      
      btnPagar.disabled = false;
      btnPagar.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg><span>Confirmar Pedido</span>';
    }
  }

  // ==================================================
  // INICIALIZAR
  // ==================================================
  document.addEventListener('DOMContentLoaded', () => {
    cargarCarrito();
    
    document.getElementById('btnAplicarCupon').addEventListener('click', validarCupon);
    document.getElementById('btnQuitarCupon')?.addEventListener('click', quitarCupon);
    document.getElementById('checkoutForm').addEventListener('submit', enviarPedido);
    
    // Enter en campo cup√≥n
    document.getElementById('cupon').addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        validarCupon();
      }
    });
  });
</script>
