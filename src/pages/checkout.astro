<script is:inline>
  // ==================================================
  // VARIABLES GLOBALES
  // ==================================================
  let cartItems = [];
  let subtotal = 0;
  let descuento = 0;
  let codigoCuponAplicado = null;
  let idCuponAplicado = null;
  const ENVIO_GRATIS_DESDE = 0;
  const COSTO_ENVIO = 0;

  // ==================================================
  // FUNCI√ìN PARA FORMATEAR PRECIOS
  // ==================================================
  function formatearPrecio(precio) {
    return precio.toLocaleString('es-ES', { 
      minimumFractionDigits: 2, 
      maximumFractionDigits: 2 
    }) + ' ‚Ç¨';
  }

  // ==================================================
  // OBTENER ITEMS DEL CARRITO
  // ==================================================
  function getCartItems() {
    // Intentar obtener de sessionStorage con guest-session-id
    const sessionId = sessionStorage.getItem('guest-session-id');
    if (sessionId) {
      const cartKey = `cart-${sessionId}`;
      const stored = sessionStorage.getItem(cartKey);
      if (stored) {
        try {
          return JSON.parse(stored);
        } catch (e) {}
      }
    }
    
    // Buscar cualquier clave que empiece con 'cart-'
    for (let i = 0; i < sessionStorage.length; i++) {
      const key = sessionStorage.key(i);
      if (key && key.startsWith('cart-')) {
        const stored = sessionStorage.getItem(key);
        if (stored) {
          try {
            return JSON.parse(stored);
          } catch (e) {}
        }
      }
    }
    
    return [];
  }

  // ==================================================
  // CARGAR CARRITO
  // ==================================================
  async function cargarCarrito() {
    try {
      console.log('cargarCarrito() - Iniciando carga...');
      
      // Primero intentar obtener del API (usuarios logueados)
      try {
        console.log('cargarCarrito() - Intentando obtener de BD...');
        const response = await fetch('/api/carrito/obtener');
        const data = await response.json();
        
        console.log('cargarCarrito() - Respuesta API:', data);
        
        cartItems = data.items || [];
        console.log('cargarCarrito() - Items de BD:', cartItems.length);
        
        if (cartItems && cartItems.length > 0) {
          console.log('cargarCarrito() - ‚úÖ Carrito cargado de BD');
          renderizarProductos();
          calcularTotales();
          return;
        }
      } catch (e) {
        console.log('cargarCarrito() - Error en BD, intentando sessionStorage:', e);
      }
      
      // Si no hay en BD, intentar sessionStorage (usuarios no logueados o carrito local)
      console.log('cargarCarrito() - Buscando en sessionStorage...');
      cartItems = getCartItems();
      console.log('cargarCarrito() - Items de sessionStorage:', cartItems.length);
      
      if (!cartItems || cartItems.length === 0) {
        console.warn('cargarCarrito() - ‚ö†Ô∏è Carrito vac√≠o, redirigiendo a /carrito');
        setTimeout(() => {
          window.location.href = '/carrito';
        }, 500);
        return;
      }
      
      console.log('cargarCarrito() - ‚úÖ Carrito cargado de sessionStorage');
      renderizarProductos();
      calcularTotales();
    } catch (e) {
      console.error('cargarCarrito() - Error:', e);
    }
  }

  // ==================================================
  // RENDERIZAR PRODUCTOS
  // ==================================================
  function renderizarProductos() {
    const container = document.getElementById('productosLista');
    
    if (!cartItems || cartItems.length === 0) {
      container.innerHTML = '<p class="text-charcoal-500">Carrito vac√≠o</p>';
      return;
    }
    
    container.innerHTML = cartItems.map(item => {
      const imagenUrl = Array.isArray(item.urls_imagenes) && item.urls_imagenes.length > 0 
        ? item.urls_imagenes[0] 
        : (item.imagen || '/images/placeholder.jpg');
      const nombreProducto = item.nombre || 'Producto sin nombre';
      const precioProducto = parseFloat(item.precio) || 0;
      const cantidad = parseInt(item.quantity) || 1;
      const precioTotal = precioProducto * cantidad;
      
      return `
        <div class="flex items-center gap-3 pb-3 border-b border-charcoal-50">
          <img 
            src="${imagenUrl}" 
            alt="${nombreProducto}"
            class="w-12 h-12 object-cover rounded"
            onerror="this.src='/images/placeholder.jpg'"
          />
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-charcoal-900 truncate">${nombreProducto}</p>
            <p class="text-xs text-charcoal-500">Cant: ${cantidad}</p>
          </div>
          <span class="text-sm font-semibold text-charcoal-700">
            ${formatearPrecio(precioTotal)}
          </span>
        </div>
      `;
    }).join('');
  }

  // ==================================================
  // CALCULAR TOTALES
  // ==================================================
  function calcularTotales() {
    subtotal = cartItems.reduce((sum, item) => sum + (item.precio * item.quantity), 0);
    const envio = subtotal >= ENVIO_GRATIS_DESDE ? 0 : COSTO_ENVIO;
    const total = subtotal - descuento + envio;
    
    document.getElementById('subtotalDisplay').textContent = formatearPrecio(subtotal);
    document.getElementById('envioDisplay').textContent = envio === 0 ? 'Gratis' : formatearPrecio(envio);
    document.getElementById('totalDisplay').textContent = formatearPrecio(total);
    
    // Mostrar/ocultar descuento
    const descuentoRow = document.getElementById('descuentoRow');
    if (descuento > 0) {
      descuentoRow.style.display = 'flex';
      document.getElementById('descuentoDisplay').textContent = `-${formatearPrecio(descuento)}`;
    } else {
      descuentoRow.style.display = 'none';
    }
  }

  // ==================================================
  // VALIDAR CUP√ìN
  // ==================================================
  async function validarCupon() {
    const input = document.getElementById('cupon');
    const codigo = input.value.trim().toUpperCase();
    const mensaje = document.getElementById('cuponMensaje');
    
    if (!codigo) return;
    
    console.log('üéüÔ∏è Validando cup√≥n:', codigo, 'Subtotal:', subtotal);
    
    mensaje.className = 'mt-3 p-2 rounded text-sm bg-blue-50 text-blue-700';
    mensaje.textContent = 'Validando cup√≥n...';
    mensaje.classList.remove('hidden');
    
    try {
      const response = await fetch('/api/cupones/validar', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          codigo_cupon: codigo, 
          subtotal: subtotal,
          codigo: codigo  // Tambi√©n enviar como alternativa
        })
      });
      
      const data = await response.json();
      
      if (data.valido) {
        descuento = data.descuento_calculado || 0;
        codigoCuponAplicado = codigo;
        idCuponAplicado = data.cupon_id;
        
        mensaje.classList.add('hidden');
        
        const cuponAplicado = document.getElementById('cuponAplicado');
        document.getElementById('cuponTexto').textContent = `${codigo} - ${data.descripcion || 'Descuento aplicado'}`;
        cuponAplicado.style.display = 'flex';
        
        input.value = '';
        input.disabled = true;
        document.getElementById('btnAplicarCupon').disabled = true;
        
        calcularTotales();
      } else {
        console.error('‚ùå Cup√≥n inv√°lido:', data);
        mensaje.className = 'mt-3 p-2 rounded text-sm bg-red-50 text-red-700';
        mensaje.textContent = data.mensaje || data.error || 'Cup√≥n no v√°lido';
      }
    } catch (error) {
      console.error('‚ùå Error al validar cup√≥n:', error);
      mensaje.className = 'mt-3 p-2 rounded text-sm bg-red-50 text-red-700';
      mensaje.textContent = 'Error al validar cup√≥n: ' + (error instanceof Error ? error.message : 'Error desconocido');
    }
  }

  // ==================================================
  // QUITAR CUP√ìN
  // ==================================================
  function quitarCupon() {
    descuento = 0;
    codigoCuponAplicado = null;
    idCuponAplicado = null;
    
    document.getElementById('cuponAplicado').style.display = 'none';
    document.getElementById('cupon').disabled = false;
    document.getElementById('btnAplicarCupon').disabled = false;
    document.getElementById('cuponMensaje').classList.add('hidden');
    
    calcularTotales();
  }

  // ==================================================
  // ENVIAR PEDIDO
  // ==================================================
  async function enviarPedido(e) {
    e.preventDefault();
    
    const form = document.getElementById('checkoutForm');
    const btnPagar = document.getElementById('btnPagar');
    const estadoMensaje = document.getElementById('estadoMensaje');
    
    // Validar formulario
    if (!form.checkValidity()) {
      form.reportValidity();
      return;
    }
    
    btnPagar.disabled = true;
    btnPagar.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path></svg> Preparando pago...';
    
    estadoMensaje.className = 'mt-4 p-3 rounded-lg text-center bg-blue-50 text-blue-700';
    estadoMensaje.textContent = 'Redirigiendo a Stripe para procesar el pago...';
    estadoMensaje.classList.remove('hidden');
    
    try {
      const formData = new FormData(form);
      
      // Crear sesi√≥n de Stripe
      const stripeResponse = await fetch('/api/pagos/crear-sesion-stripe', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          items: cartItems,
          email: formData.get('email'),
          nombre: formData.get('nombre'),
          apellidos: formData.get('apellidos'),
          telefono: formData.get('telefono'),
          subtotal: subtotal,
          descuento: descuento,
          total: subtotal - descuento + (subtotal >= ENVIO_GRATIS_DESDE ? 0 : COSTO_ENVIO),
          codigo_cupon: codigoCuponAplicado,
          cupon_id: idCuponAplicado,
          codigoPostal: formData.get('codigo_postal'),
          direccion: formData.get('direccion'),
          ciudad: formData.get('ciudad'),
          provincia: formData.get('provincia')
        })
      });
      
      const stripeData = await stripeResponse.json();
      
      if (stripeData.success && stripeData.url) {
        console.log('‚úÖ Sesi√≥n de Stripe creada:', stripeData.session_id);
        console.log('Redirigiendo a:', stripeData.url);
        
        // Redirigir a Stripe Checkout
        window.location.href = stripeData.url;
      } else {
        console.error('‚ùå Error en Stripe:', stripeData);
        
        estadoMensaje.className = 'mt-4 p-3 rounded-lg text-center bg-red-50 text-red-700';
        estadoMensaje.textContent = stripeData.error || 'Error al procesar el pago. Intenta de nuevo.';
        
        btnPagar.disabled = false;
        btnPagar.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg><span>Confirmar Pedido</span>';
      }
    } catch (error) {
      console.error('‚ùå Error:', error);
      estadoMensaje.className = 'mt-4 p-3 rounded-lg text-center bg-red-50 text-red-700';
      estadoMensaje.textContent = 'Error de conexi√≥n. Int√©ntalo de nuevo.';
      
      btnPagar.disabled = false;
      btnPagar.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg><span>Confirmar Pedido</span>';
    }
  }

