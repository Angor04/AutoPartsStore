// src/pages/checkout.astro
// Página de checkout completa con validación de stock
// VERSIÓN PRODUCCIÓN

import PublicLayout from "@/layouts/PublicLayout.astro";
import { getSupabaseAdmin } from "@/lib/supabase";

const title = "Finalizar Compra";
const description = "Completa tu pedido de forma segura";

// Verificar autenticación
const accessToken = Astro.cookies.get('sb-access-token')?.value;
let userId = Astro.cookies.get('user-id')?.value; 
const cookieEmail = Astro.cookies.get('user-email')?.value;

// Si no hay token de acceso NI user-id, forzar modo invitado
if (!accessToken && !userId) {
  userId = undefined;
}

// Cargar datos si el usuario está logueado
const supabaseAdmin = getSupabaseAdmin();
let direccion = null;
let perfil = null;
let authEmail = '';

if (userId) {
  // 1. Obtener email de Auth (el más fiable, igual que en perfil.astro)
  try {
    const { data: userData } = await supabaseAdmin.auth.admin.getUserById(userId);
    if (userData?.user?.email) {
      authEmail = userData.user.email;
    }
  } catch (e: any) {
    console.error('AUTH ERROR in checkout.astro:', e.message);
  }

  // 2. Obtener dirección principal
  const { data: direccionData } = await supabaseAdmin
    .from('direcciones_envio')
    .select('*')
    .eq('usuario_id', userId)
    .eq('es_principal', true)
    .single();
  
  direccion = direccionData;

  // 3. Obtener perfil
  const { data: perfilData } = await supabaseAdmin
    .from('usuarios')
    .select('*')
    .eq('id', userId)
    .single();
  
  perfil = perfilData;
}

// La prioridad final para el email:
// 1. Email de Auth (directo de la cuenta)
// 2. Email de la cookie (sesión actual)
const finalUserEmail = authEmail || cookieEmail || '';
---

<PublicLayout title={title} description={description}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 md:py-8">
    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-xs md:text-sm text-charcoal-600 mb-6">
      <a href="/" class="hover:text-navy-500">Inicio</a>
