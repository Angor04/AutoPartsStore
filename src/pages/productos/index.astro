---
// src/pages/productos/index.astro
// Listado de productos

export const prerender = false;

import PublicLayout from "@/layouts/PublicLayout.astro";
import ProductCard from "@/components/product/ProductCard.astro";
import { getProducts, getCategories, searchProducts } from "@/lib/supabase";
import type { Product, Category } from "@/types/index";

const query = Astro.url.searchParams.get('q');
const productos: Product[] = query ? await searchProducts(query) : await getProducts();
const categorias: Category[] = await getCategories();


const title = "Productos";
const description = "Catálogo completo de recambios y piezas para coches";
---

<PublicLayout title={title} description={description}>
  <div class="bg-red-600 text-ivory-50 py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold">{title}</h1>
      <p class="text-ivory-200 mt-2 text-sm">{description}</p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar Filters -->
      <aside class="lg:col-span-1">
        <div class="bg-white rounded-lg p-6 shadow-sm border border-charcoal-200">
          <h3 class="text-lg font-bold text-charcoal-900 mb-6">Categorías</h3>

          <!-- Categories Filter -->
          <div class="mb-8">
            <ul class="space-y-2">
              <li>
                <a href="/productos" class="text-red-600 hover:text-red-700 font-medium text-sm">
                  Todas
                </a>
              </li>
              {categorias.map((categoria) => (
                <li>
                  <a
                    href={`/categoria/${categoria.slug}`}
                    class="text-charcoal-600 hover:text-red-600 transition-colors text-sm"
                  >
                    {categoria.nombre}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </aside>

      <!-- Products Grid -->
      <div class="lg:col-span-3 min-h-screen">
        {productos && productos.length > 0 ? (
          <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-3 md:gap-6">
            {productos.map((product) => (
              <ProductCard product={product} />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <p class="text-lg text-charcoal-600 mb-4">
              No hay productos disponibles en este momento
            </p>
            <p class="text-sm text-charcoal-500">
              {productos && productos.length === 0
                ? "La base de datos está vacía"
                : "Cargando productos..."}
            </p>
          </div>
        )}
      </div>
    </div>
  </div>
</PublicLayout>

<script is:inline define:vars={{ productos }}>
  window.addEventListener('load', () => {
    if (window.registrarProductosParaSync) {
      window.registrarProductosParaSync(productos);
    }
  });
</script>
