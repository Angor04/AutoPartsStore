---
// src/pages/productos/[slug].astro
// Página de detalle de un producto

export const prerender = false;

import PublicLayout from "@/layouts/PublicLayout.astro";
import CartSlideOver from "@/components/ui/CartSlideOver.astro";
import AddToCartButton from "@/components/islands/AddToCartButton.tsx";
import { getProducts } from "@/lib/supabase";
import { formatPrice } from "@/lib/utils";

const slug = Astro.params.slug;
const productos = await getProducts();
const producto = productos?.find((p) => p.slug === slug);

if (!producto) {
  return new Response("Producto no encontrado", { status: 404 });
}

const images = producto.urls_imagenes || [];
const precioOriginal = producto.precio_original || producto.precio;
const descuento = precioOriginal > producto.precio 
  ? Math.round(((precioOriginal - producto.precio) / precioOriginal) * 100) 
  : null;

const title = `${producto.nombre} | AutoPartsStore`;
const description = producto.descripcion || `Compra ${producto.nombre} en AutoPartsStore`;
---

<PublicLayout title={title} description={description}>
  <CartSlideOver />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumb -->
    <nav class="flex gap-2 mb-8 text-sm text-charcoal-600">
      <a href="/" class="hover:text-red-600">Inicio</a>
      <span>/</span>
      <a href="/productos" class="hover:text-red-600">Productos</a>
      <span>/</span>
      <span class="text-charcoal-900 font-medium">{producto.nombre}</span>
    </nav>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Images Gallery -->
      <div class="flex flex-col gap-4">
        {images.length > 0 ? (
          <>
            <div class="bg-gray-100 rounded-lg overflow-hidden aspect-square flex items-center justify-center">
              <img
                src={images[0]}
                alt={producto.nombre}
                class="w-full h-full object-cover"
              />
            </div>
            {images.length > 1 && (
              <div class="grid grid-cols-3 gap-2">
                {images.map((img) => (
                  <button class="bg-gray-100 rounded-lg aspect-square overflow-hidden hover:ring-2 hover:ring-red-600 transition-all">
                    <img
                      src={img}
                      alt={producto.nombre}
                      class="w-full h-full object-cover"
                    />
                  </button>
                ))}
              </div>
            )}
          </>
        ) : (
          <div class="bg-gray-200 rounded-lg aspect-square flex items-center justify-center">
            <span class="text-charcoal-500 text-lg">Sin imagen</span>
          </div>
        )}
      </div>

      <!-- Product Info -->
      <div class="flex flex-col gap-6">
        <div>
          <h1 class="text-4xl font-bold text-charcoal-900 mb-2">
            {producto.nombre}
          </h1>
          <p class="text-charcoal-600">{producto.descripcion}</p>
        </div>

        <!-- Pricing -->
        <div class="border-y border-charcoal-200 py-6">
          <div class="flex items-baseline gap-4">
            <span class="text-4xl font-bold text-red-600">
              {formatPrice(producto.precio)}
            </span>
            {precioOriginal > producto.precio && (
              <>
                <span class="text-lg text-charcoal-500 line-through">
                  {formatPrice(precioOriginal)}
                </span>
                <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-sm font-semibold">
                  -{descuento}%
                </span>
              </>
            )}
          </div>
        </div>

        <!-- Stock Status -->
        <div class="flex items-center gap-3">
          <div class="w-3 h-3 bg-green-600 rounded-full"></div>
          <span class="text-sm text-charcoal-700">
            {producto.stock > 0 
              ? `${producto.stock} disponibles` 
              : "No disponible"}
          </span>
        </div>

        <!-- Features -->
        {producto.especificaciones && (
          <div class="bg-ivory-50 rounded-lg p-6">
            <h3 class="font-bold text-charcoal-900 mb-4">Especificaciones</h3>
            <ul class="space-y-2">
              {Object.entries(producto.especificaciones).map(([key, value]) => (
                <li class="flex justify-between">
                  <span class="text-charcoal-600">{key}:</span>
                  <span class="font-medium text-charcoal-900">{value}</span>
                </li>
              ))}
            </ul>
          </div>
        )}

        <!-- Add to Cart -->
        <div class="flex gap-3 pt-6">
          <AddToCartButton 
            client:load 
            producto={JSON.stringify(producto)}
          />
          <button class="flex-1 px-6 py-3 border-2 border-charcoal-200 text-charcoal-900 font-semibold rounded-lg hover:border-red-600 hover:text-red-600 transition-colors flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
            Añadir a favoritos
          </button>
        </div>

        <!-- Trust Badges -->
        <div class="grid grid-cols-3 gap-4 pt-6 border-t border-charcoal-200">
          <div class="text-center">
            <svg class="w-8 h-8 mx-auto mb-2 text-amber-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 11l3 3L22 4m-10.5 9.5l3 3L22 4m-13-2h16a2 2 0 012 2v12a2 2 0 01-2 2H3a2 2 0 01-2-2V5a2 2 0 012-2z" />
            </svg>
            <p class="text-xs text-charcoal-600 font-medium">Envío gratis +50€</p>
          </div>
          <div class="text-center">
            <svg class="w-8 h-8 mx-auto mb-2 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            <p class="text-xs text-charcoal-600 font-medium">Devolución 30 días</p>
          </div>
          <div class="text-center">
            <svg class="w-8 h-8 mx-auto mb-2 text-amber-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 1l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 1z" />
            </svg>
            <p class="text-xs text-charcoal-600 font-medium">Garantía 24 meses</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Products Section -->
    <div class="mt-16 pt-12 border-t border-charcoal-200">
      <h2 class="text-2xl font-bold text-charcoal-900 mb-8">Productos relacionados</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="text-center text-charcoal-500 py-8 col-span-full">
          <p class="text-sm">Cargando productos relacionados...</p>
        </div>
      </div>
    </div>
  </div>
</PublicLayout>

<style>
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
