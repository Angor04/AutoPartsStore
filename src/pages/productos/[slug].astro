---
// src/pages/productos/[slug].astro
// Página de detalle de un producto

export const prerender = false;

import PublicLayout from "@/layouts/PublicLayout.astro";
import AddToCartButton from "@/components/islands/AddToCartButton.tsx";
import ProductCard from "@/components/product/ProductCard.astro";
import { getProducts, getCategories } from "@/lib/supabase";
import { formatPrice } from "@/lib/utils";
import type { Product, Category } from "@/types/index";

const slug = Astro.params.slug;
const productos: Product[] = await getProducts();


let producto: Product | undefined;

if (Array.isArray(productos) && productos.length > 0) {
  producto = productos.find((p) => {
    const idString = String(p.id);
    return p.slug === slug || idString === slug;
  });
}


if (!producto) {
  return new Response("Producto no encontrado", { status: 404 });
}

// Obtener la categoría del producto
const categorias: Category[] = await getCategories();
const categoriaProducto = categorias.find((c) => c.id === producto!.categoria_id);

// Obtener productos relacionados (misma categoría, excluyendo el actual)
const productosRelacionados: Product[] = productos
  .filter((p) => p.categoria_id === producto!.categoria_id && p.id !== producto!.id)
  .slice(0, 4);

const images = producto.urls_imagenes || [];

const specs = (producto.especificaciones as Record<string, string>) || {};
const isOfferActive = specs.en_oferta === 'true';

const rawOriginal = producto.precio_original !== null && producto.precio_original !== undefined ? producto.precio_original : producto.precio;
const originalPrice = Number(rawOriginal) || 0;
const currentPrice = Number(producto.precio) || 0;

const hasDiscount = isOfferActive && currentPrice > 0 && currentPrice < originalPrice;
const effectivePrice = hasDiscount ? currentPrice : originalPrice;
const strikeThroughPrice = hasDiscount ? originalPrice : null;

const title = `${producto.nombre} | AutoPartsStore`;
const description = producto.descripcion || `Compra ${producto.nombre} en AutoPartsStore`;
---

<PublicLayout title={title} description={description}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 md:py-12">
    <!-- Breadcrumb -->
    <nav class="flex flex-wrap gap-2 mb-6 md:mb-8 text-xs md:text-sm text-charcoal-600">
      <a href="/" class="hover:text-red-600">Inicio</a>
      <span>/</span>
      <a href={categoriaProducto ? `/categoria/${categoriaProducto.slug}` : "/productos"} class="hover:text-red-600">
        {categoriaProducto ? categoriaProducto.nombre : "Productos"}
      </a>
      <span>/</span>
      <span class="text-charcoal-900 font-medium">{producto.nombre}</span>
    </nav>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      <!-- Images Carousel -->
      <div class="product-carousel" id="productCarousel" data-images={JSON.stringify(images)}>
        {images.length > 0 ? (
          <div class="carousel-viewport">
            <img
              src={images[0]}
              alt={producto.nombre}
              id="carousel-img"
              class="carousel-img"
            />
            {images.length > 1 && (
              <>
                <!-- Left click zone -->
                <button class="carousel-zone carousel-zone-left" id="carousel-prev" aria-label="Imagen anterior">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15 18 9 12 15 6"></polyline>
                  </svg>
                </button>
                <!-- Right click zone -->
                <button class="carousel-zone carousel-zone-right" id="carousel-next" aria-label="Siguiente imagen">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9 18 15 12 9 6"></polyline>
                  </svg>
                </button>
              </>
            )}
          </div>
        ) : (
          <div class="bg-gray-200 rounded-lg aspect-square flex items-center justify-center">
            <span class="text-charcoal-500 text-lg">Sin imagen</span>
          </div>
        )}

        {images.length > 1 && (
          <div class="carousel-dots" id="carousel-dots">
            {images.map((_, i) => (
              <button class={`carousel-dot ${i === 0 ? 'active' : ''}`} data-index={i} aria-label={`Imagen ${i + 1}`} />
            ))}
          </div>
        )}
      </div>

      <!-- Product Info -->
      <div class="flex flex-col gap-4 md:gap-6">
        <div>
          <h1 class="text-2xl md:text-4xl font-bold text-charcoal-900 mb-2 leading-tight">
            {producto.nombre}
          </h1>
          <p class="text-sm md:text-base text-charcoal-600">{producto.descripcion}</p>
        </div>

        <!-- Pricing -->
        <div class="border-b border-charcoal-200 py-3">
          <div class="flex items-baseline gap-4">
            <span class="text-3xl font-bold text-red-600">
              {formatPrice(effectivePrice)}
            </span>
            {strikeThroughPrice && (
              <span class="text-lg text-charcoal-500 line-through opacity-70">
                {formatPrice(strikeThroughPrice)}
              </span>
            )}
          </div>
        </div>

        <!-- Features -->
        {producto.especificaciones && Object.keys(producto.especificaciones).filter(k => k !== 'en_oferta').length > 0 && (
          <div class="bg-ivory-50 rounded-lg p-4 md:p-6 mt-1 md:mt-3">
            <h3 class="text-sm md:text-base font-bold text-charcoal-900 mb-3 md:mb-4">Especificaciones</h3>
            <ul class="space-y-2">
              {Object.entries(producto.especificaciones).filter(([k]) => k !== 'en_oferta').map(([key, value]) => (
                <li class="flex justify-between text-xs md:text-sm">
                  <span class="text-charcoal-600">{key}:</span>
                  <span class="font-medium text-charcoal-900 text-right">{String(value)}</span>
                </li>
              ))}
            </ul>
          </div>
        )}

        <!-- Add to Cart -->
        <div class="pt-6">
          <AddToCartButton 
            client:load 
            productId={producto.id}
            productName={producto.nombre}
            price={effectivePrice}
            imageUrl={images[0] || ''}
            stock={producto.stock}
          />
        </div>

        <!-- Trust Badges -->
        <div class="grid grid-cols-3 gap-2 md:gap-4 pt-6 border-t border-charcoal-200">
          <div class="text-center">
            <div class="mb-2 flex justify-center">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-amber-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 11l3 3L22 4m-10.5 9.5l3 3L22 4m-13-2h16a2 2 0 012 2v12a2 2 0 01-2 2H3a2 2 0 01-2-2V5a2 2 0 012-2z" />
              </svg>
            </div>
            <p class="text-[10px] md:text-xs text-charcoal-600 font-medium leading-tight">Envío gratis +50€</p>
          </div>
          <div class="text-center">
            <div class="mb-2 flex justify-center">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </div>
            <p class="text-[10px] md:text-xs text-charcoal-600 font-medium leading-tight">Devolución 30 días</p>
          </div>
          <div class="text-center">
            <div class="mb-2 flex justify-center">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-amber-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 1l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 1z" />
              </svg>
            </div>
            <p class="text-[10px] md:text-xs text-charcoal-600 font-medium leading-tight">Garantía 24 meses</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Products Section -->
    <div class="mt-16 pt-12 border-t border-charcoal-200">
      <h2 class="text-2xl font-bold text-charcoal-900 mb-8">Productos relacionados</h2>
      {productosRelacionados.length > 0 ? (
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {productosRelacionados.map((prod) => (
            <ProductCard product={prod} />
          ))}
        </div>
      ) : (
        <div class="text-center text-charcoal-500 py-8">
          <p class="text-sm">No hay más productos en esta categoría</p>
        </div>
      )}
    </div>
  </div>
</PublicLayout>

<style>
  .product-carousel {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .carousel-viewport {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    background-color: #f3f4f6;
    border-radius: 12px;
    overflow: hidden;
  }

  .carousel-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.25s ease;
  }

  /* Clickable zones — cover left/right halves */
  .carousel-zone {
    position: absolute;
    top: 0;
    width: 50%;
    height: 100%;
    border: none;
    background: transparent;
    cursor: pointer;
    display: flex;
    align-items: center;
    z-index: 2;
    padding: 0 12px;
    color: white;
    opacity: 0;
    transition: opacity 0.25s ease;
  }

  .carousel-viewport:hover .carousel-zone {
    opacity: 1;
  }

  .carousel-zone svg {
    filter: drop-shadow(0 1px 3px rgba(0,0,0,0.5));
  }

  .carousel-zone-left {
    left: 0;
    justify-content: flex-start;
  }

  .carousel-zone-right {
    right: 0;
    justify-content: flex-end;
  }

  .carousel-zone:hover svg {
    transform: scale(1.2);
    transition: transform 0.15s ease;
  }

  /* Dots */
  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    padding: 4px 0;
  }

  .carousel-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: none;
    background: #d1d5db;
    cursor: pointer;
    transition: background 0.2s ease, transform 0.2s ease;
    padding: 0;
  }

  .carousel-dot:hover {
    background: #9ca3af;
    transform: scale(1.2);
  }

  .carousel-dot.active {
    background: #dc2626;
    transform: scale(1.2);
  }

  @media (max-width: 640px) {
    .carousel-zone {
      opacity: 0.7;
    }
    .carousel-dot {
      width: 8px;
      height: 8px;
    }
  }
</style>

<script is:inline define:vars={{ producto }}>
  window.addEventListener('load', () => {
    if (window.registrarProductosParaSync) {
      window.registrarProductosParaSync([producto]);
    }
  });
</script>

<script>
  const carouselEl = document.getElementById('productCarousel') as HTMLElement | null;
  if (carouselEl) {
    const images: string[] = JSON.parse(carouselEl.dataset.images || '[]');
    let currentIndex = 0;

    const img = document.getElementById('carousel-img') as HTMLImageElement | null;
    const prevBtn = document.getElementById('carousel-prev');
    const nextBtn = document.getElementById('carousel-next');
    const dotsContainer = document.getElementById('carousel-dots');

    function goTo(index: number): void {
      if (!img || images.length === 0) return;
      if (index < 0) index = images.length - 1;
      if (index >= images.length) index = 0;
      currentIndex = index;
      img.src = images[currentIndex];

      if (dotsContainer) {
        dotsContainer.querySelectorAll('.carousel-dot').forEach((dot, i) => {
          dot.classList.toggle('active', i === currentIndex);
        });
      }
    }

    if (prevBtn) prevBtn.addEventListener('click', () => goTo(currentIndex - 1));
    if (nextBtn) nextBtn.addEventListener('click', () => goTo(currentIndex + 1));

    if (dotsContainer) {
      dotsContainer.querySelectorAll('.carousel-dot').forEach((dot) => {
        dot.addEventListener('click', () => {
          goTo(parseInt((dot as HTMLElement).dataset.index || '0', 10));
        });
      });
    }

    // Swipe support
    let touchStartX = 0;
    carouselEl.addEventListener('touchstart', (e) => {
      touchStartX = (e as TouchEvent).changedTouches[0].screenX;
    }, { passive: true });

    carouselEl.addEventListener('touchend', (e) => {
      const diff = touchStartX - (e as TouchEvent).changedTouches[0].screenX;
      if (Math.abs(diff) > 50) {
        diff > 0 ? goTo(currentIndex + 1) : goTo(currentIndex - 1);
      }
    }, { passive: true });
  }
</script>
