---
// src/pages/index.astro
// Homepage de la tienda

import PublicLayout from "@/layouts/PublicLayout.astro";
import ProductCard from "@/components/product/ProductCard.astro";
import Button from "@/components/ui/Button.astro";
import { getFeaturedProducts, getCategories } from "@/lib/supabase";
import type { Product, Category } from "@/types/index";

export const prerender = false;

const featuredProducts: Product[] = await getFeaturedProducts(6);
const categories: Category[] = await getCategories();

const title = "Home";
const description = "Descubre nuestro amplio catálogo de recambios y piezas para coches. Aceite, bujías, neumáticos, filtros y más.";
---

<PublicLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-red-600 text-ivory-50 py-4 md:py-5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-xl md:text-2xl font-bold mb-1">
        Recambios y Piezas para tu Coche
      </h1>
      <p class="text-sm text-ivory-200 mb-3 max-w-2xl">
        Encuentra todas las piezas de calidad que necesita tu vehículo. Envíos rápidos y precios garantizados.
      </p>
      <Button href="/productos" variant="secondary" size="lg">
        Explorar Catálogo
      </Button>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-charcoal-900 mb-8">
        Categorías Principales
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {categories.map((cat) => {
          return (
            <a href={`/categoria/${cat.slug}`} class="group">
              <div class="bg-gray-100 rounded-lg p-6 text-center hover:bg-red-50 transition-colors h-full flex flex-col items-center justify-center">
                {cat.imagen ? (
                  <img 
                    src={cat.imagen} 
                    alt={cat.nombre}
                    class="w-20 h-20 object-contain mb-3 group-hover:scale-110 transition-transform"
                  />
                ) : (
                  <div class="text-3xl mb-3">{cat.icono}</div>
                )}
                <h3 class="font-bold text-charcoal-900 group-hover:text-red-600 transition-colors text-sm">
                  {cat.nombre}
                </h3>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>
      </div>
    </div>
  </section>

  <!-- Featured Products Section -->
  {featuredProducts.length > 0 && (
    <section class="py-16 md:py-24 bg-ivory-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-12">
          <h2 class="text-2xl md:text-3xl font-bold text-charcoal-900 mb-4">
            Productos Más Vendidos
          </h2>
          <p class="text-charcoal-600">
            Descubre nuestros recambios y piezas más populares
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {featuredProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>

        <div class="text-center mt-12">
          <Button href="/productos" variant="primary" size="lg">
            Ver Todos los Productos
          </Button>
        </div>
      </div>
    </section>
  )}

  <!-- Trust Section -->
  <section class="bg-white py-12 border-t border-charcoal-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <h3 class="font-bold text-charcoal-900 mb-2">Piezas Originales</h3>
          <p class="text-charcoal-600 text-sm">Garantía de calidad en todos nuestros productos</p>
        </div>
        <div class="text-center">
          <h3 class="font-bold text-charcoal-900 mb-2">Envío Rápido</h3>
          <p class="text-charcoal-600 text-sm">Entrega en 24-48 horas en toda España</p>
        </div>
        <div class="text-center">
          <h3 class="font-bold text-charcoal-900 mb-2">Mejor Precio</h3>
          <p class="text-charcoal-600 text-sm">Garantizamos los precios más competitivos</p>
        </div>
      </div>
    </div>
  </section>
</PublicLayout>
