---
// src/pages/carrito.astro
// Página del carrito - Usa componentes React para sincronización

import PublicLayout from "@/layouts/PublicLayout.astro";
import CartDisplay from "@/components/islands/CartDisplay";
import CartSummary, { CartItemCount } from "@/components/islands/CartSummary";

const title = "Tu Carrito";
const description = "Revisa y gestiona los artículos en tu carrito";
---

<PublicLayout title={title} description={description}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 md:py-12">
    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-xs md:text-sm text-charcoal-600 mb-6 md:mb-8">
      <a href="/" class="hover:text-navy-500">Inicio</a>
      <span>/</span>
      <span>Carrito</span>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Items -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-sm p-4 md:p-8">
          <div class="flex items-center justify-between mb-6 md:mb-8">
            <h1 class="text-xl md:text-2xl font-serif font-bold text-charcoal-900">
              {title}
            </h1>
            <CartItemCount client:load />
          </div>

          <CartDisplay client:load />
        </div>
      </div>

      <!-- Summary - Componente React -->
      <div class="lg:col-span-1">
        <CartSummary client:load />
      </div>
    </div>
  </div>
</PublicLayout>
