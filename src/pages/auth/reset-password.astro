---
// src/pages/auth/reset-password.astro
import AuthLayout from '../../layouts/AuthLayout.astro';

const { token, email, error } = Astro.url.searchParams;

if (!token || !email) {
  return Astro.redirect('/auth/login?error=Enlace inválido');
}
---

<AuthLayout>
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-2xl p-8">
        <!-- Logo -->
        <div class="flex justify-center mb-8">
          <img src="/images/logo.svg" alt="Auto Parts Store" class="h-20 w-auto" />
        </div>

        <h1 class="text-3xl font-bold text-white text-center mb-2">
          Restablecer Contraseña
        </h1>
        <p class="text-slate-400 text-center mb-8">
          Ingresa tu nueva contraseña
        </p>

        <!-- Error Message -->
        {error && (
          <div class="mb-6 p-4 bg-red-500/10 border border-red-500/30 rounded-lg">
            <p class="text-red-400 text-sm">{error}</p>
          </div>
        )}

        <!-- Form -->
        <form method="POST" action="/api/auth/reset-password" class="space-y-4">
          <!-- Token (hidden) -->
          <input type="hidden" name="token" value={token} />
          <input type="hidden" name="email" value={email} />

          <!-- New Password -->
          <div>
            <label for="new-password" class="block text-slate-300 text-sm font-medium mb-2">
              Nueva Contraseña
            </label>
            <input
              type="password"
              id="new-password"
              name="new-password"
              required
              minlength="6"
              class="w-full px-4 py-3 rounded-lg bg-slate-700 border border-slate-600 text-white placeholder-slate-400 focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500"
              placeholder="Mínimo 6 caracteres"
            />
          </div>

          <!-- Confirm Password -->
          <div>
            <label for="confirm-password" class="block text-slate-300 text-sm font-medium mb-2">
              Confirmar Contraseña
            </label>
            <input
              type="password"
              id="confirm-password"
              name="confirm-password"
              required
              minlength="6"
              class="w-full px-4 py-3 rounded-lg bg-slate-700 border border-slate-600 text-white placeholder-slate-400 focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500"
              placeholder="Confirma tu nueva contraseña"
            />
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 rounded-lg transition duration-200 mt-6"
          >
            Restablecer Contraseña
          </button>
        </form>

        <!-- Back to Login -->
        <p class="text-center text-slate-400 text-sm mt-6">
          <a href="/auth/login" class="text-red-500 hover:text-red-400 transition">
            Volver a iniciar sesión
          </a>
        </p>
      </div>
    </div>
  </div>
</AuthLayout>
