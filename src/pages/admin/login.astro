---
// src/pages/admin/login.astro
// Página de login para administradores

import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/ui/Button.astro";

const title = "Acceso Administrativo";
const description = "Ingresa a tu cuenta de administrador";
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-gradient-to-br from-navy-900 to-charcoal-900 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <!-- Logo -->
      <div class="text-center mb-12">
        <h1 class="text-3xl font-serif font-bold text-ivory-50 mb-2">
          FashionStore
        </h1>
        <p class="text-ivory-200">Panel de Administración</p>
      </div>

      <!-- Login Form -->
      <div class="bg-white rounded-lg shadow-2xl p-8">
        <h2 class="text-2xl font-serif font-bold text-charcoal-900 mb-6 text-center">
          Acceso de Administrador
        </h2>

        <form method="POST" action="/api/auth/login" class="space-y-6">
          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-charcoal-900 mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="tu@email.com"
              class="w-full px-4 py-2 border border-charcoal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-navy-500"
              required
            />
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium text-charcoal-900 mb-2">
              Contraseña
            </label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="••••••••"
              class="w-full px-4 py-2 border border-charcoal-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-navy-500"
              required
            />
          </div>

          <!-- Remember Me -->
          <div class="flex items-center">
            <input
              type="checkbox"
              id="remember"
              name="remember"
              class="w-4 h-4 rounded border-charcoal-300 accent-navy-500"
            />
            <label for="remember" class="ml-2 text-sm text-charcoal-700">
              Recuérdame
            </label>
          </div>

          <!-- Submit -->
          <Button type="submit" variant="primary" size="lg" class="w-full">
            Ingresar
          </Button>
        </form>

        <!-- Forgot Password -->
        <div class="mt-6 text-center">
          <a href="#" class="text-sm text-navy-500 hover:text-navy-700 transition-colors">
            ¿Olvidaste tu contraseña?
          </a>
        </div>
      </div>

      <!-- Footer -->
      <p class="text-center text-ivory-200 text-sm mt-8">
        <a href="/" class="text-gold-500 hover:text-gold-400 transition-colors">
          Volver a la tienda
        </a>
      </p>
    </div>
  </div>
</BaseLayout>
