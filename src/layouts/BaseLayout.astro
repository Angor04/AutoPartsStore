---
// src/layouts/BaseLayout.astro
// Layout base que contiene la estructura HTML b치sica

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "AutoPartsStore - Recambios y Piezas para Coches", image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}
    <meta name="theme-color" content="#dc2626" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/webp" href="/images/logo.webp" />
    <title>{title} | AutoPartsStore</title>
    
    <!-- Prefetch Supabase -->
    <link rel="preconnect" href="https://your-project.supabase.co" />
    
    <!-- SessionStorage se limpia autom치ticamente al cerrar navegador -->
    <!-- No necesitamos c칩digo de limpieza manualmente -->
    
    <!-- Estilos Tailwind -->
    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Inter:wght@300;400;500;600;700&display=swap');
      
      * {
        @apply box-border;
      }
      
      html {
        scroll-behavior: smooth;
      }
      
      body {
        @apply bg-ivory-50 text-charcoal-900 font-sans;
      }
      
      h1, h2, h3, h4, h5, h6 {
        @apply font-serif font-semibold;
      }
    </style>
  </head>
  <body>
    <slot />
    
    <script>
      import { createClient } from '@supabase/supabase-js';

      const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL;
      const SUPABASE_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;

      if (SUPABASE_URL && SUPABASE_KEY) {
        const client = createClient(SUPABASE_URL, SUPABASE_KEY);

        const channel = client
          .channel('public:productos')
          .on(
            'postgres_changes',
            { event: '*', schema: 'public', table: 'productos' },
            (payload) => {
              const { eventType, new: newRecord, old: oldRecord } = payload;
              
              // Helper to find cards
              const findCards = (id) => {
                  if (!id) return [];
                  // Try both just in case, though attribute is string
                  return document.querySelectorAll(`[data-product-id="${id}"]`);
              };

              // Helper to hide product
              const hideProduct = (id) => {
                const cards = findCards(id);
                cards.forEach((card) => {
                  if (card instanceof HTMLElement) {
                    card.style.display = 'none';
                    card.style.opacity = '0.5'; 
                  }
                });
                
                // Dispatch event for other components (SearchBar)
                window.dispatchEvent(new CustomEvent('product-visibility-change', { 
                    detail: { id: id, visible: false } 
                }));

                // Detail Page Redirect if on that page
                if (window.location.pathname.includes(`/productos/${id}`)) {
                    if (window.location.pathname.endsWith(`/${id}`)) {
                         alert('Este producto ya no est치 disponible.');
                         window.location.href = '/productos';
                    }
                }
              };

              // Helper to show product
              const showProduct = (id) => {
                 const cards = findCards(id);
                 cards.forEach((card) => {
                    if (card instanceof HTMLElement) {
                       card.style.display = '';
                       card.style.opacity = '1';
                    }
                 });
                 
                 // Dispatch event
                 window.dispatchEvent(new CustomEvent('product-visibility-change', { 
                    detail: { id: id, visible: true } 
                 }));
              };

              if (eventType === 'DELETE') {
                  // RLS hidden or deleted
                  if (oldRecord && oldRecord.id) {
                      hideProduct(oldRecord.id);
                  }
              } 
              else if (eventType === 'INSERT') {
                  // RLS visible or created
                  if (newRecord && newRecord.id) {
                      showProduct(newRecord.id);
                  }
              }
              else if (eventType === 'UPDATE') {
                  if (newRecord) {
                       // Explicit check on 'activo' if visible
                       if (newRecord.activo === false) {
                           hideProduct(newRecord.id);
                       } else {
                           showProduct(newRecord.id);
                       }
                  }
              }
            }
          )
          .subscribe((status) => {
          });
      }
    </script>
  </body>
</html>
