---
// src/layouts/BaseLayout.astro
// Layout base que contiene la estructura HTML bÃ¡sica

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "AutoPartsStore - Recambios y Piezas para Coches", image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}
    <meta name="theme-color" content="#dc2626" />
    <link rel="canonical" href={canonicalURL} />
    <title>{title} | AutoPartsStore</title>
    
    <!-- Prefetch Supabase -->
    <link rel="preconnect" href="https://your-project.supabase.co" />
    
    <!-- Limpiar sessionStorage, localStorage y cookies de usuario para invitados -->
    <script>
      (function() {
        if (typeof window === 'undefined') return;
        
        try {
          console.log('ðŸ§¹ Iniciando limpieza de carrito invitado...');
          
          // âš ï¸ PASO 1: Limpiar TODAS las cookies de usuario/sesiÃ³n
          const cookies = document.cookie.split(';');
          cookies.forEach(cookie => {
            const cookieName = cookie.split('=')[0].trim();
            if (cookieName.includes('user') || cookieName.includes('sb-') || cookieName.includes('session')) {
              console.log('ðŸ§¹ Eliminando cookie:', cookieName);
              document.cookie = `${cookieName}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
            }
          });
          
          // PASO 2: Limpiar TODO localStorage relacionado con carrito
          const localKeys = Object.keys(localStorage);
          localKeys.forEach(key => {
            if (key.includes('cart') || key.includes('autopartsstore')) {
              console.log('ðŸ§¹ Eliminando de localStorage:', key);
              localStorage.removeItem(key);
            }
          });
          
          // PASO 3: Limpiar sessionStorage de carritos antiguos
          const sessionKeys = Object.keys(sessionStorage);
          sessionKeys.forEach(key => {
            if (key.startsWith('cart-')) {
              console.log('ðŸ§¹ Eliminando de sessionStorage:', key);
              sessionStorage.removeItem(key);
            }
          });
          
          console.log('âœ… Limpieza de carrito completada');
        } catch (e) {
          console.warn('Error limpiando carrito:', e);
        }
      })();
    </script>
    
    <!-- Estilos Tailwind -->
    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Inter:wght@300;400;500;600;700&display=swap');
      
      * {
        @apply box-border;
      }
      
      html {
        scroll-behavior: smooth;
      }
      
      body {
        @apply bg-ivory-50 text-charcoal-900 font-sans;
      }
      
      h1, h2, h3, h4, h5, h6 {
        @apply font-serif font-semibold;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
