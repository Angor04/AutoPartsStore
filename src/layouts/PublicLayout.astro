---
// src/layouts/PublicLayout.astro
// Layout para la tienda pública con header y footer

import BaseLayout from "./BaseLayout.astro";
import CartIcon from "@/components/islands/CartIcon";
import SearchBar from "@/components/islands/SearchBar";
import CartSlideOver from "@/components/ui/CartSlideOver.astro";
import { getCategories } from "@/lib/supabase";
import type { Category } from "@/types/index";
import NewsletterPopup from "@/components/NewsletterPopup.astro";

export const prerender = false;

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const categorias: Category[] = await getCategories();

// Verificar si hay sesión iniciada
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const userId = Astro.cookies.get('user-id')?.value;
const isLoggedIn = !!(accessToken || userId);
---

<BaseLayout title={title} description={description} image={image}>
  <!-- Cart SlideOver Panel -->
  {!Astro.url.pathname.includes('/pedido-confirmado') && <CartSlideOver />}
  
  <div class="flex flex-col min-h-screen bg-ivory-50">
    <!-- Header -->
    <header class="z-50 bg-white border-b border-charcoal-200 shadow-sm sticky top-0">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Top Bar / Main Header Content -->
        <div class="flex flex-col md:flex-row items-center justify-between py-2 md:py-1 gap-4 md:gap-0">
          <div class="flex items-center justify-between w-full md:w-auto">
            <!-- Logo -->
            <a href="/" class="flex-shrink-0 flex items-center gap-2">
              <img 
                src="https://res.cloudinary.com/ddi0g76bk/image/upload/v1768210429/logo_btu63x.webp" 
                alt="AutoPartsStore" 
                class="h-16 w-16 md:h-24 md:w-24 lg:h-32 lg:w-32 object-contain transition-all"
              />
              <h1 class="text-xl md:text-2xl font-bold text-red-600">
                AutoPartsStore
              </h1>
            </a>

            <!-- Mobile Icons (Hidden on MD+) -->
            <div class="flex items-center gap-2 md:hidden">
              {!Astro.url.pathname.includes('/pedido-confirmado') && <CartIcon client:load />}
              {isLoggedIn ? (
                <div class="relative group">
                  <button class="p-2 hover:bg-red-50 rounded-lg transition-colors">
                    <svg class="w-6 h-6 text-charcoal-700" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                    </svg>
                  </button>
                  <div class="absolute right-0 mt-0 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50 border border-gray-100">
                    <a href="/perfil" class="block px-4 py-2 text-sm text-charcoal-700 hover:bg-red-50 rounded-t-lg">
                      Mi Perfil
                    </a>
                    <a href="/pedidos" class="block px-4 py-2 text-sm text-charcoal-700 hover:bg-red-50">
                      Mis Pedidos
                    </a>
                    <hr class="my-1" />
                    <a href="/api/auth/logout" class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50 rounded-b-lg">
                      Cerrar Sesión
                    </a>
                  </div>
                </div>
              ) : (
                <div id="mobile-login-btn">
                  <a href="/auth/login" class="p-2 text-red-600">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                    </svg>
                  </a>
                </div>
              )}
            </div>
          </div>

          <!-- Search Bar (Full width on Mobile) -->
          <div class="w-full md:flex-1 md:px-8">
            <SearchBar client:load />
          </div>

          <!-- Desktop Icons (Hidden on Mobile) -->
          <div class="hidden md:flex items-center gap-4">
            {!Astro.url.pathname.includes('/pedido-confirmado') && <CartIcon client:load />}
            {isLoggedIn ? (
              <div class="relative group">
                <button class="p-2 hover:bg-red-50 rounded-lg transition-colors">
                  <svg class="w-6 h-6 text-charcoal-700" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                  </svg>
                </button>
                <div class="absolute right-0 mt-0 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50 border border-gray-100">
                  <a href="/perfil" class="block px-4 py-2 text-sm text-charcoal-700 hover:bg-red-50 rounded-t-lg">
                    Mi Perfil
                  </a>
                  <a href="/pedidos" class="block px-4 py-2 text-sm text-charcoal-700 hover:bg-red-50">
                    Mis Pedidos
                  </a>
                  <hr class="my-1" />
                  <a href="/api/auth/logout" class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50 rounded-b-lg">
                    Cerrar Sesión
                  </a>
                </div>
              </div>
            ) : (
              <div id="desktop-login-btn">
                <a href="/auth/login" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium text-sm transition-colors whitespace-nowrap">
                  Iniciar Sesión
                </a>
              </div>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-charcoal-900 text-ivory-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 md:py-16">
        <!-- Newsletter Section -->
        <div class="mb-12 pb-12 border-b border-charcoal-800">
          <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
            <div class="text-center lg:text-left">
              <h3 class="text-xl md:text-2xl font-serif font-bold mb-2">¡Consigue un 10% de descuento!</h3>
              <p class="text-ivory-300">Suscríbete a nuestra newsletter y recibe un cupón exclusivo para tu próxima compra.</p>
            </div>
            <div class="w-full lg:w-auto">
              <form id="footer-newsletter" class="flex flex-col sm:flex-row gap-3">
                <input 
                  type="email" 
                  id="footer-email" 
                  placeholder="Introduce tu email" 
                  required
                  class="bg-charcoal-800 border border-charcoal-700 rounded-lg px-6 py-3 text-white focus:outline-none focus:ring-2 focus:ring-red-500 transition-all min-w-[300px]"
                />
                <button 
                  type="submit" 
                  class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-8 rounded-lg transition-all transform hover:scale-105 active:scale-95"
                >
                  Suscribirme
                </button>
              </form>
              <div id="footer-newsletter-msg" class="mt-3 text-sm text-center lg:text-left hidden"></div>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
          <!-- About -->
          <div class="text-center sm:text-left">
            <h3 class="text-lg font-serif font-semibold mb-4">AutoPartsStore</h3>
            <p class="text-ivory-200 text-sm max-w-xs mx-auto sm:mx-0">
              Tienda online de recambios y piezas para coches con envío rápido y garantía.
            </p>
            <div class="mt-4 text-ivory-200 text-sm">
              <p class="font-semibold">Ubicación:</p>
              <p>C. Puerto Serrano, 11540</p>
              <p>Sanlúcar de Barrameda, Cádiz</p>
            </div>
          </div>

          <!-- Links -->
          <div class="text-center sm:text-left">
            <h4 class="text-sm font-semibold mb-4 uppercase tracking-wide">Tienda</h4>
            <ul class="space-y-2 text-sm text-ivory-200">
              <li><a href="/productos" class="hover:text-ivory-50 transition-colors">Todos los productos</a></li>
            </ul>
          </div>

          <!-- Customer Service -->
          <div class="text-center sm:text-left">
            <h4 class="text-sm font-semibold mb-4 uppercase tracking-wide">Ayuda</h4>
            <ul class="space-y-2 text-sm text-ivory-200">
              <li><a href="/contacto" class="hover:text-ivory-50 transition-colors">Contacto</a></li>
              <li><a href="/estado-pedido" class="hover:text-ivory-50 transition-colors">Envíos</a></li>
            </ul>
          </div>

          <!-- Legal -->
          <div class="text-center sm:text-left">
            <h4 class="text-sm font-semibold mb-4 uppercase tracking-wide">Legal</h4>
            <ul class="space-y-2 text-sm text-ivory-200">
              <li><a href="/terminos" class="hover:text-ivory-50 transition-colors">Términos y condiciones</a></li>
              <li><a href="/privacidad" class="hover:text-ivory-50 transition-colors">Privacidad</a></li>
              <li><a href="/cookies" class="hover:text-ivory-50 transition-colors">Cookies</a></li>
            </ul>
          </div>
        </div>

        <!-- Bottom -->
        <div class="border-t border-charcoal-800 pt-8 mt-8">
          <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-ivory-200 text-center md:text-left">
            <p>&copy; 2025 AutoPartsStore. Todos los derechos reservados.</p>
            <div class="flex space-x-6">
              <a href="https://www.instagram.com/antoniogc_sw/?hl=es" target="_blank" rel="noopener noreferrer" class="hover:text-ivory-50 transition-colors">Instagram</a>
              <a href="https://www.facebook.com/yontrabolta.letran?locale=es_ES" target="_blank" rel="noopener noreferrer" class="hover:text-ivory-50 transition-colors">Facebook</a>
              <a href="https://www.linkedin.com/in/antonio-gonzález-cruces-99a3372b9/" target="_blank" rel="noopener noreferrer" class="hover:text-ivory-50 transition-colors">LinkedIn</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
    
    <!-- Newsletter Popup (solo para usuarios no suscritos) -->
    {!isLoggedIn && <NewsletterPopup delayMs={8000} />}
  </div>
  <script is:inline>
    // Fail-safe para detectar sesión en el cliente cuando el SSR falla por cookies seguras/redirects
    (function() {
      const cookies = document.cookie;
      const hasUserId = cookies.includes('user-id=');
      const hasAccessToken = cookies.includes('sb-access-token=');
      
      if (hasUserId || hasAccessToken) {
        // Si tenemos cookies pero el servidor renderizó el botón de login, lo ocultamos.
        // Nota: No reconstruimos el menú completo aquí por simplicidad y porque el layout 
        // ya tiene la lógica de isLoggedIn. Esto es solo para evitar el "Iniciar Sesión" confuso.
        const desktopBtn = document.getElementById('desktop-login-btn');
        const mobileBtn = document.getElementById('mobile-login-btn');
        
        if (desktopBtn) desktopBtn.style.display = 'none';
        if (mobileBtn) mobileBtn.style.display = 'none';
        
        console.log('Sesión detectada en cliente. Botón de login ocultado automáticamente.');
      }
    })();
  </script>

  <!-- Lógica para el Newsletter del Footer -->
  <script is:inline>
    document.getElementById('footer-newsletter')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const email = document.getElementById('footer-email').value;
      const msgDiv = document.getElementById('footer-newsletter-msg');
      const btn = form.querySelector('button');

      msgDiv.classList.remove('hidden', 'text-green-400', 'text-red-400');
      msgDiv.textContent = 'Enviando...';
      btn.disabled = true;

      try {
        const response = await fetch('/api/newsletter/suscribir', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email, recibe_ofertas: true })
        });

        const data = await response.json();

        if (response.ok) {
          if (data.ya_suscrito) {
            msgDiv.textContent = data.mensaje || 'Este correo ya está suscrito.';
            msgDiv.classList.add('text-yellow-400');
          } else {
            msgDiv.textContent = '¡Suscrito con éxito! Mira tu email.';
            msgDiv.classList.add('text-green-400');
            form.reset();
          }
        } else {
          msgDiv.textContent = data.error || data.mensaje || 'Error al suscribirse';
          msgDiv.classList.add('text-red-400');
        }
      } catch (error) {
        msgDiv.textContent = 'Error de conexión';
        msgDiv.classList.add('text-red-400');
      } finally {
        msgDiv.classList.remove('hidden');
        btn.disabled = false;
      }
    });
  </script>

  <script src="/js/stock-real-time.js?v=1" is:inline></script>
</BaseLayout>
