---
// src/components/NewsletterPopup.astro
// Popup de suscripción a newsletter
// Aparece tras N segundos o al detectar intención de salida
// No aparece más de una vez (localStorage)

export interface Props {
  delayMs?: number; // Cuándo mostrar el popup (ms)
  mostrarAlSalir?: boolean; // Mostrar al intentar cerrar pestaña
}

const { delayMs = 5000, mostrarAlSalir = true } = Astro.props;
---

<div id="newsletterPopup" class="newsletter-popup-overlay" style="display: none;">
  <div class="newsletter-popup-content">
    <button id="closeNewsletterPopup" class="close-btn" aria-label="Cerrar">×</button>

    <div class="popup-header">
      <h2>¡Descuento Exclusivo!</h2>
      <p>Obtén un <strong>10% de descuento</strong> en tu primera compra</p>
    </div>

    <div class="popup-body">
      <form id="formNewsletter">
        <div class="form-group">
          <label for="emailNewsletter">Tu correo electrónico</label>
          <input
            type="email"
            id="emailNewsletter"
            name="email"
            placeholder="tu@email.com"
            required
          />
        </div>

        <div class="form-group checkbox">
          <input type="checkbox" id="aceptaOfertas" name="aceptaOfertas" checked />
          <label for="aceptaOfertas">
            Sí, quiero recibir ofertas y novedades
          </label>
        </div>

        <div id="mensajeNewsletterError" class="error-message" style="display: none;"></div>

        <button type="submit" class="btn btn-primary btn-block">
          Obtener mi Descuento
        </button>
      </form>

      <div id="mensajeNewsletterExito" class="success-message" style="display: none;">
        <strong>¡Listo!</strong>
        <p>Tu código de descuento del 10%:</p>
        <div id="codigoDescuento" class="codigo-box"></div>
        <p class="codigo-nota">También te lo hemos enviado a tu email</p>
      </div>
    </div>

    <div class="popup-footer">
      <small>No compartimos tu email. Puedes desuscribirte en cualquier momento.</small>
    </div>
  </div>
</div>

<style>
  .newsletter-popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    animation: fadeIn 0.3s ease;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .newsletter-popup-content {
    background: white;
    border-radius: 12px;
    padding: 40px 32px;
    max-width: 400px;
    width: 90%;
    position: relative;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    animation: slideUp 0.3s ease;
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .close-btn {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 36px;
    height: 36px;
    background: #f3f4f6;
    border: none;
    border-radius: 50%;
    font-size: 24px;
    cursor: pointer;
    color: #666;
    transition: all 0.2s;
  }

  .close-btn:hover {
    background: #e5e7eb;
    color: #1a1a1a;
  }

  .popup-header {
    text-align: center;
    margin-bottom: 24px;
  }

  .popup-header h2 {
    font-size: 24px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 8px 0;
  }

  .popup-header p {
    color: #666;
    margin: 0;
    font-size: 14px;
  }

  .popup-body {
    margin-bottom: 20px;
  }

  .form-group {
    margin-bottom: 16px;
  }

  .form-group label {
    display: block;
    margin-bottom: 6px;
    font-weight: 600;
    color: #333;
    font-size: 14px;
  }

  .form-group input[type="email"] {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 14px;
    transition: border-color 0.3s;
  }

  .form-group input[type="email"]:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .form-group.checkbox {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .form-group.checkbox input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .form-group.checkbox label {
    margin: 0;
    cursor: pointer;
  }

  .btn {
    width: 100%;
    padding: 12px;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .btn:hover {
    background: #764ba2;
  }

  .btn:disabled {
    background: #d1d5db;
    cursor: not-allowed;
  }

  .error-message {
    padding: 12px;
    background: #fee2e2;
    color: #991b1b;
    border-radius: 6px;
    margin-bottom: 12px;
    font-size: 14px;
    border-left: 4px solid #dc2626;
  }

  .success-message {
    text-align: center;
    padding: 16px;
    background: #dcfce7;
    color: #166534;
    border-radius: 6px;
    margin-bottom: 0;
    font-size: 14px;
    border-left: 4px solid #16a34a;
  }

  .success-message strong {
    display: block;
    margin-bottom: 4px;
    font-size: 16px;
  }

  .success-message p {
    margin: 0 0 8px 0;
  }

  .codigo-box {
    background: #166534;
    color: white;
    font-family: monospace;
    font-size: 20px;
    font-weight: bold;
    letter-spacing: 2px;
    padding: 12px 20px;
    border-radius: 8px;
    margin: 12px 0;
    text-align: center;
    user-select: all;
    cursor: pointer;
  }

  .codigo-box:hover {
    background: #14532d;
  }

  .codigo-nota {
    font-size: 12px;
    color: #666;
    margin-top: 8px !important;
  }

  .popup-footer {
    text-align: center;
    color: #999;
    font-size: 12px;
  }

  @media (max-width: 640px) {
    .newsletter-popup-content {
      padding: 32px 24px;
      max-width: 100%;
      margin: 16px;
    }

    .popup-header h2 {
      font-size: 20px;
    }
  }
</style>

<script define:vars={{ delayMs, mostrarAlSalir }}>
  // ============================================================================
  // LÓGICA PARA MOSTRAR/OCULTAR POPUP
  // ============================================================================

  const STORAGE_KEY = 'newsletter-popup-shown';

  const popup = document.getElementById('newsletterPopup');
  const closeBtn = document.getElementById('closeNewsletterPopup');
  const form = document.getElementById('formNewsletter');
  const emailInput = document.getElementById('emailNewsletter');
  const errorDiv = document.getElementById('mensajeNewsletterError');
  const exitoDiv = document.getElementById('mensajeNewsletterExito');

  // ============================================================================
  // 1. VERIFICAR SI YA SE MOSTRÓ (localStorage)
  // ============================================================================
  function debesMostrarPopup() {
    return !sessionStorage.getItem(STORAGE_KEY);
  }

  // ============================================================================
  // 2. MARCAR COMO MOSTRADO
  // ============================================================================
  function marcarMostrado() {
    sessionStorage.setItem(STORAGE_KEY, 'true');
  }

  // ============================================================================
  // 3. MOSTRAR POPUP TRAS DELAY
  // ============================================================================
  function mostrarPopupDelayado() {
    if (debesMostrarPopup()) {
      setTimeout(() => {
        popup.style.display = 'flex';
        marcarMostrado();
      }, delayMs);
    }
  }

  // ============================================================================
  // 4. DETECTAR INTENCIÓN DE SALIDA (opcional)
  // ============================================================================
  function detectarIntenciónSalida() {
    if (mostrarAlSalir && debesMostrarPopup()) {
      document.addEventListener('mouseout', (e) => {
        // Solo si el usuario mueve el mouse hacia el top de la página
        if (e.clientY <= 0) {
          popup.style.display = 'flex';
          marcarMostrado();
        }
      });
    }
  }

  // ============================================================================
  // 5. CERRAR POPUP
  // ============================================================================
  closeBtn?.addEventListener('click', () => {
    popup.style.display = 'none';
  });

  // Cerrar al clickear fuera
  popup?.addEventListener('click', (e) => {
    if (e.target === popup) {
      popup.style.display = 'none';
    }
  });

  // ============================================================================
  // 6. MANEJAR SUSCRIPCIÓN
  // ============================================================================
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = emailInput.value.trim();
    const aceptaOfertas = document.getElementById('aceptaOfertas').checked;
    const codigoDiv = document.getElementById('codigoDescuento');

    // Limpiar mensajes
    errorDiv.style.display = 'none';
    exitoDiv.style.display = 'none';
    form.classList.remove('error', 'success');

    try {
      const response = await fetch('/api/newsletter/suscribir', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          email,
          recibe_ofertas: aceptaOfertas,
          usuario_id: null
        })
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Error al suscribirse');
      }

      if (data.ya_suscrito) {
        errorDiv.textContent = data.mensaje || 'Este correo ya está suscrito.';
        errorDiv.style.background = '#fef3c7'; // Color crema/amarillo
        errorDiv.style.color = '#92400e';
        errorDiv.style.borderColor = '#f59e0b';
        errorDiv.style.display = 'block';
      } else {
        // Mostrar código de descuento si se recibió
        if (data.codigo_descuento) {
          codigoDiv.textContent = data.codigo_descuento;
        } else if (data.codigo) {
          codigoDiv.textContent = data.codigo;
        } else {
          codigoDiv.textContent = 'Revisa tu email';
        }

        // Mostrar éxito
        exitoDiv.style.display = 'block';
        form.style.display = 'none';
      }

      // Cerrar popup después de 5 segundos
      setTimeout(() => {
        popup.style.display = 'none';
      }, 5000);

    } catch (error) {
      errorDiv.textContent = error.message || 'Error al suscribirse';
      errorDiv.style.background = '#fee2e2'; // Reset color error original
      errorDiv.style.color = '#991b1b';
      errorDiv.style.borderColor = '#dc2626';
      errorDiv.style.display = 'block';
    }
  });

  // ============================================================================
  // 7. INICIALIZAR
  // ============================================================================
  mostrarPopupDelayado();
  detectarIntenciónSalida();
</script>
