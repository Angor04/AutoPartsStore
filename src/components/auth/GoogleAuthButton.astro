---
// src/components/auth/GoogleAuthButton.astro
// Botón de autenticación con Google

interface Props {
  redirectTo?: string;
  text?: string;
}

const { redirectTo = '/', text = 'Continuar con Google' } = Astro.props;
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;

// Obtener el origen correctamente (incluyendo puerto)
const url = new URL(Astro.url);
const origin = `${url.protocol}//${url.host}`;
const callbackUrl = `${origin}/auth/callback`;

console.log('OAuth callback URL:', callbackUrl);

// Construir la URL de OAuth usando Authorization Code Flow
const oauthUrl = new URL(`${supabaseUrl}/auth/v1/authorize`);
oauthUrl.searchParams.set('provider', 'google');
oauthUrl.searchParams.set('response_type', 'code');
oauthUrl.searchParams.set('scope', 'openid profile email');
oauthUrl.searchParams.set('redirect_to', callbackUrl);
