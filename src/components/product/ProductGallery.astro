---
// src/components/product/ProductGallery.astro
// Galería de imágenes para la página de detalle del producto

interface Props {
  images: string[];
  productName: string;
}

const { images, productName } = Astro.props;
const mainImage = images[0] || "https://via.placeholder.com/600x700?text=No+Image";
const thumbnails = images.slice(0, 4);
---

<div class="flex flex-col gap-4">
  <!-- Main Image -->
  <div class="w-full aspect-[3/4] bg-charcoal-100 rounded-lg overflow-hidden">
    <img
      src={mainImage}
      alt={productName}
      id="main-image"
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Thumbnails -->
  {thumbnails.length > 1 && (
    <div class="flex gap-2 overflow-x-auto">
      {thumbnails.map((image, index) => (
        <button
          class={`flex-shrink-0 w-20 h-24 rounded-lg overflow-hidden border-2 transition-colors cursor-pointer ${
            index === 0 ? "border-navy-500" : "border-charcoal-200 hover:border-navy-300"
          }`}
          onclick={`document.getElementById('main-image').src = '${image}'`}
        >
          <img
            src={image}
            alt={`${productName} - Imagen ${index + 1}`}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </button>
      ))}
    </div>
  )}
</div>
