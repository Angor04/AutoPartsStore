---
// src/components/product/ProductCard.astro
// Tarjeta de producto para el catálogo

import Button from "@/components/ui/Button.astro";
import { formatPrice } from "@/lib/utils";
import type { Product } from "@/types";

interface Props {
  product: Product;
}

const { product } = Astro.props;
const mainImage = product.urls_imagenes?.[0] || "https://via.placeholder.com/400x500?text=No+Image";

// Requisito: Usar EXCLUSIVAMENTE precio_original como fuente de verdad
const originalPrice = product.precio_original || product.precio || 0;
const hasDiscount = product.precio && product.precio < originalPrice;
const discountPrice = hasDiscount ? product.precio : null;
const priceDisplay = formatPrice(discountPrice || originalPrice);
const originalPriceDisplay = hasDiscount ? formatPrice(originalPrice) : null;
// Nota: El stock dinámico se calcula en el componente de la isla
const inStock = product.stock > 0;
// Usar ID como identificador principal, slug como alternativa
const productLink = `/productos/${product.id}`;
---

<div class="group flex flex-col h-full bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden border border-charcoal-100" data-product-id={product.id} data-original-stock={product.stock}>
  <!-- Image Container -->
  <div class="relative w-full aspect-square bg-gray-100 overflow-hidden">
    <img
      src={mainImage}
      alt={product.nombre}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
      loading="lazy"
    />
    {!inStock && (
      <div class="absolute inset-0 bg-charcoal-900/70 flex items-center justify-center">
        <span class="text-white font-bold text-xs">Agotado</span>
      </div>
    )}
  </div>

  <!-- Content -->
  <div class="flex flex-col flex-grow p-2">
    <h3 class="text-xs font-bold text-charcoal-900 group-hover:text-red-600 transition-colors mb-0.5 line-clamp-2">
      {product.nombre}
    </h3>

    <p class="text-xs text-charcoal-600 mb-auto line-clamp-2 text-opacity-75">
      {product.descripcion}
    </p>

    <!-- Price -->
    <div class="mt-1.5 mb-2">
      <div class="flex items-baseline gap-1.5">
        {hasDiscount ? (
          <>
            <p class="text-sm font-bold text-red-600">{priceDisplay}</p>
            <p class="text-xs text-charcoal-500 line-through opacity-70">Antes: {originalPriceDisplay}</p>
          </>
        ) : (
          <p class="text-sm font-bold text-red-600">{priceDisplay}</p>
        )}
      </div>
      <p class="text-xs text-charcoal-600 mt-0.5 text-opacity-70 stock-badge" data-product-id={product.id}>
        {product.stock > 0 ? `${product.stock} disp.` : "Sin stock"}
      </p>
    </div>

    <!-- Action -->
    <a href={productLink} class="w-full">
      <Button variant="primary" size="md" class="w-full text-xs py-1.5" disabled={!inStock}>
        Ver Detalles
      </Button>
    </a>
  </div>
</div>

<script>
  // Listener para actualizar el stock en tiempo real
  window.addEventListener('cartUpdated', () => {
    const cards = document.querySelectorAll('[data-product-id]');
    const stockReservedRaw = sessionStorage.getItem('stock-reserved') || '{}';
    const stockReserved: Record<string, number> = JSON.parse(stockReservedRaw);
    
    cards.forEach(card => {
      const productId = card.getAttribute('data-product-id') as string | null;
      const originalStock = parseInt(card.getAttribute('data-original-stock') || '0');
      const reserved = (productId && stockReserved[productId]) || 0;
      const available = Math.max(0, originalStock - reserved);
      
      const stockDisplay = card.querySelector('.stock-display');
      if (stockDisplay) {
        stockDisplay.textContent = available > 0 ? `${available} disp.` : 'Sin stock';
      }
    });
  });
</script>
